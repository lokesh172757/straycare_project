<%- include('../partials/header') %>

    <div class="container mt-5">
        <div class="text-center mb-4">
            <h2>üë§ Local User Dashboard</h2>
        </div>

        <div class="card mb-5 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">üêæ Your Reported Animals</h4>
            </div>
            <div class="card-body">
                <% if (myReports.length===0) { %>
                    <p class="text-muted">No reports found.</p>
                    <% } else { %>
                        <div class="list-group">
                            <% myReports.forEach(report=> { %>
                                <div class="list-group-item list-group-item-action mb-3 rounded shadow-sm">
                                    <p class="mb-1"><strong>Status:</strong>
                                        <%= report.status %>
                                    </p>
                                    <p class="mb-1"><strong>Description:</strong>
                                        <%= report.description || "N/A" %>
                                    </p>
                                    <% if (report.photoUrl) { %>
                                        <img src="<%= report.photoUrl %>" alt="Animal Photo" class="img-fluid rounded"
                                            style="max-height: 200px;">
                                        <% } %>
                                </div>
                                <% }) %>
                        </div>
                        <% } %>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">üè† Your Adoption Requests</h4>
            </div>
            <div class="card-body">
                <% if (myAdoptionRequests.length===0) { %>
                    <p class="text-muted">No adoption requests found.</p>
                    <% } else { %>
                        <div class="list-group">
                            <% myAdoptionRequests.forEach(req=> { %>
                                <div class="list-group-item list-group-item-action mb-3 rounded shadow-sm">
                                    <p class="mb-1"><strong>Message:</strong>
                                        <%= req.message %>
                                    </p>
                                    <p class="mb-1"><strong>Request Date:</strong>
                                        <%= req.createdAt.toDateString() %>
                                    </p>
                                </div>
                                <% }) %>
                        </div>
                        <% } %>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>