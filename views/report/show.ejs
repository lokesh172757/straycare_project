                                            <span>
                                                <%= report.status==='OPEN' ? 'üü°' : report.status==='IN_PROGRESS' ? 'üîµ'
                                                    : report.status==='TREATED' ? 'üü¢' : '‚ö´' %>
                                            </span>
                                            <%= report.status.replace("_", " " ) %>
                                        </span>
