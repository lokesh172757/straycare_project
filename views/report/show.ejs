                            <div class="description-text">
                                <%= report.description || "No detailed description was provided for this report." %>
                            </div>

                            <hr class="divider">

                            <div class="info-grid">
                                <div class="info-card">
                                    <div class="info-label">
                                        <span>üìä</span> Current Status
                                    </div>
                                    <div class="info-value">
                                        <span class="status-badge 
