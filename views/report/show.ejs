                    <!-- Enhanced Map Section -->
                    <div class="map-section fade-in-up">
                        <h3 class="map-title">
                            <span>üó∫Ô∏è</span> Incident Location
                        </h3>
                        <div id="map" style="height: 350px; width: 100%;"></div>
                    </div>

                    <!-- Back Button -->
                    <div class="text-center fade-in-up">
                        <a href="/ngo/reports" class="back-button">
                            <span>‚Üê</span>
                            <span>Back to All Reports</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Enhanced Leaflet Map Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const lat = <%= report.location.coordinates[1] %>;
            const lng = <%= report.location.coordinates[0] %>;

            // Initialize map with custom styling
            const map = L.map('map', {
                zoomControl: true,
                scrollWheelZoom: true,
                doubleClickZoom: true,
                boxZoom: true,
                keyboard: true,
                dragging: true,
                touchZoom: true
            }).setView([lat, lng], 15);

            // Add tile layer with enhanced styling
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
                maxZoom: 19,
                minZoom: 10
            }).addTo(map);

            // Create custom marker icon
            const customIcon = L.divIcon({
                html: '<div style="background: linear-gradient(135deg, #f4a261, #e76f51); width: 30px; height: 30px; border-radius: 50%; border: 3px solid white; box-shadow: 0 4px 15px rgba(0,0,0,0.3); display: flex; align-items: center; justify-content: center; font-size: 16px;">üö®</div>',
                className: 'custom-div-icon',
                iconSize: [30, 30],
                iconAnchor: [15, 15],
                popupAnchor: [0, -15]
            });

            // Add marker with custom popup
            const marker = L.marker([lat, lng], { icon: customIcon }).addTo(map);

            marker.bindPopup(`
                <div style="font-family: 'Inter', sans-serif; padding: 10px; text-align: center;">
                    <h6 style="color: #1b4332; margin-bottom: 8px; font-weight: 700;">üìç Report Location</h6>
                    <p style="margin: 0; color: #666; font-size: 0.9rem;">Animal was found at this location</p>
                    <div style="margin-top: 8px; padding: 6px 12px; background: linear-gradient(135deg, #e6f5e9, #f0f9f5); border-radius: 15px; font-size: 0.8rem; color: #2a9d8f; font-weight: 600;">
                        Status: <%= report.status.replace("_", " ") %>
                    </div>
                </div>
            `).openPopup();

            // Add click event for map interaction
            map.on('click', function (e) {
                console.log('Map clicked at coordinates:', e.latlng);
            });

            // Smooth zoom to marker after map loads
            setTimeout(() => {
                map.flyTo([lat, lng], 16, {
                    animate: true,
                    duration: 1.5
                });
            }, 1000);
        });
    </script>

