<%- include("../partials/header") %>

    <style>
        body {
            background: linear-gradient(to right, #f8f9fa, #e3f2fd);
        }

        .card:hover {
            transform: scale(1.02);
            transition: all 0.3s ease;
        }

        .badge {
            font-size: 0.9rem;
            padding: 0.4em 0.6em;
        }
    </style>

    <div class="container mt-5">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-primary">üêæ My Reported Animals</h2>
            <p class="text-muted">Track the status of your reported animals below.</p>
        </div>

        <% if (reports.length===0) { %>
            <div class="alert alert-warning text-center">
                You haven't reported any animals yet.
            </div>
            <div class="text-center">
                <a href="/report/new" class="btn btn-outline-primary mt-3">
                    üì§ Report One Now
                </a>
            </div>
            <% } else { %>
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    <% reports.forEach(report=> { %>
                        <div class="col">
                            <div class="card h-100 shadow border-0">
                                <img src="<%= report.photoUrl %>" class="card-img-top" alt="Reported Animal Photo"
                                    style="height: 200px; object-fit: cover;">
                                <div class="card-body d-flex flex-column justify-content-between">
                                    <div>
                                        <h5 class="card-title">
                                            Status:
                                            <span class="badge 
                                        <%= report.status === 'OPEN' ? 'bg-warning text-dark' : 
                                            report.status === 'IN_PROGRESS' ? 'bg-info text-dark' : 
                                            report.status === 'TREATED' ? 'bg-success' : 'bg-secondary' %>">
                                                <%= report.status.replace("_", " " ) %>
                                            </span>
                                        </h5>

                                        <% if (report.description) { %>
                                            <p class="card-text mt-2">
                                                <%= report.description %>
                                            </p>
                                            <% } %>
                                    </div>
                                    <p class="text-muted mt-3 mb-0">
                                        <small>üìÖ Reported on <%= new Date(report.createdAt).toLocaleDateString() %>
                                                </small>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <% } %>
    </div>

    <%- include("../partials/footer") %>