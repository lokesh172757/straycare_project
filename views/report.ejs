<%- include("partials/header") %>

    <style>
        :root {
            --primary-green: #2a9d8f;
            --dark-green: #1b4332;
            --light-green: #e6f5e9;
            --warm-yellow: #f4a261;
            --soft-orange: #e76f51;
            --cream: #fffbe7;
            --shadow-light: 0 4px 20px rgba(0, 0, 0, 0.08);
            --shadow-medium: 0 8px 40px rgba(0, 0, 0, 0.12);
            --shadow-heavy: 0 20px 60px rgba(0, 0, 0, 0.15);
            --gradient-primary: linear-gradient(135deg, var(--primary-green), #52b788);
            --gradient-hero: linear-gradient(135deg, rgba(26, 67, 50, 0.9), rgba(42, 157, 143, 0.8));
            --gradient-background: linear-gradient(135deg, #e6f5e9 0%, #fffbe7 50%, #f0f9f5 100%);
        }

        * {
            box-sizing: border-box;
        }

        body {
            background: var(--gradient-background);
            background-attachment: fixed;
            font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
            line-height: 1.6;
            color: #2c3e50;
            overflow-x: hidden;
            min-height: 100vh;
        }

        /* Enhanced Hero Section */
        .hero-section {
            background: url("https://images.unsplash.com/photo-1601758228041-f3b2795255f1?ixlib=rb-4.0.3&auto=format&fit=crop&w=1470&q=80") center/cover no-repeat;
            padding: 100px 20px 60px;
            color: white;
            border-radius: 24px;
            margin-bottom: 60px;
            position: relative;
            overflow: hidden;
            box-shadow: var(--shadow-heavy);
        }

        .hero-section::before {
            content: "";
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, transparent 20%, rgba(42, 157, 143, 0.1) 21%, rgba(42, 157, 143, 0.1) 34%, transparent 35%, transparent);
            animation: float 8s ease-in-out infinite;
            z-index: 0;
        }

        .hero-section::after {
            content: "";
            position: absolute;
            inset: 0;
            background: var(--gradient-hero);
            border-radius: 24px;
            z-index: 1;
        }

        .hero-section .content {
            position: relative;
            z-index: 2;
            max-width: 600px;
            margin: 0 auto;
            text-align: center;
        }

        .hero-title {
            font-size: clamp(2rem, 4vw, 3rem);
            font-weight: 800;
            margin-bottom: 16px;
            background: linear-gradient(45deg, #ffffff, #f0f9f5);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: glow 2s ease-in-out infinite alternate;
            text-shadow: 0 4px 20px rgba(255, 255, 255, 0.3);
        }

        .hero-subtitle {
            font-size: 1.2rem;
            font-weight: 300;
            opacity: 0.95;
            margin-bottom: 0;
            animation: fadeInUp 1s ease-out 0.3s both;
        }

        /* Enhanced Form Card */
        .form-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 24px;
            overflow: hidden;
            box-shadow: var(--shadow-medium);
            position: relative;
            padding: 40px;
            margin-bottom: 40px;
        }

        .form-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--gradient-primary);
            border-radius: 24px 24px 0 0;
        }

        /* Form Labels */
        .form-label {
            color: var(--dark-green);
            font-weight: 700;
            margin-bottom: 8px;
            font-size: 1rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .form-label::before {
            content: "";
            width: 4px;
            height: 20px;
            background: var(--gradient-primary);
            border-radius: 2px;
        }

        /* Enhanced Form Controls */
        .form-control,
        textarea {
            border-radius: 12px;
            border: 2px solid rgba(42, 157, 143, 0.2);
            padding: 14px 18px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
        }

        .form-control:focus,
        textarea:focus {
            border-color: var(--primary-green);
            box-shadow: 0 0 0 0.25rem rgba(42, 157, 143, 0.15);
            background: rgba(255, 255, 255, 0.95);
            transform: translateY(-2px);
        }

        textarea {
            resize: vertical;
            min-height: 120px;
        }

        /* Enhanced File Input */
        .form-control[type="file"] {
            padding: 12px;
            position: relative;
            cursor: pointer;
        }

        .form-control[type="file"]::-webkit-file-upload-button {
            background: var(--gradient-primary);
            border: none;
            color: white;
            padding: 8px 16px;
            border-radius: 8px;
            font-weight: 600;
            margin-right: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .form-control[type="file"]::-webkit-file-upload-button:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(42, 157, 143, 0.3);
        }

        /* Map Container */
        #map {
            height: 350px;
            border-radius: 16px;
            border: 2px solid rgba(42, 157, 143, 0.2);
            box-shadow: var(--shadow-light);
            transition: all 0.3s ease;
            overflow: hidden;
        }

        #map:hover {
            box-shadow: var(--shadow-medium);
            transform: translateY(-2px);
        }

        /* Enhanced Submit Button */
        .btn-enhanced {
            background: var(--gradient-primary);
            border: none;
            color: white;
            padding: 16px 32px;
            border-radius: 25px;
            font-weight: 700;
            font-size: 1.1rem;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            box-shadow: 0 6px 20px rgba(42, 157, 143, 0.3);
            position: relative;
            overflow: hidden;
            width: 100%;
            cursor: pointer;
        }

        .btn-enhanced::before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .btn-enhanced:hover {
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 12px 30px rgba(42, 157, 143, 0.4);
            color: white;
        }

        .btn-enhanced:hover::before {
            left: 100%;
        }

        .btn-enhanced:active {
            transform: translateY(-1px) scale(0.98);
        }

        /* Form Section Styling */
        .form-section {
            margin-bottom: 32px;
            padding: 24px;
            background: rgba(230, 245, 233, 0.3);
            border-radius: 16px;
            border: 1px solid rgba(42, 157, 143, 0.1);
            transition: all 0.3s ease;
        }

        .form-section:hover {
            background: rgba(230, 245, 233, 0.5);
            transform: translateY(-2px);
        }

        /* Map Instructions */
        .map-instruction {
            background: linear-gradient(135deg, var(--warm-yellow), var(--soft-orange));
            color: white;
            padding: 12px 20px;
            border-radius: 12px;
            margin-bottom: 16px;
            font-size: 0.95rem;
            font-weight: 600;
            text-align: center;
            box-shadow: 0 4px 15px rgba(244, 162, 97, 0.3);
            animation: pulse 2s infinite;
        }

        /* Animations */
        @keyframes float {

            0%,
            100% {
                transform: translate(0px, 0px) rotate(0deg);
            }

            33% {
                transform: translate(30px, -30px) rotate(120deg);
            }

            66% {
                transform: translate(-20px, 20px) rotate(240deg);
            }
        }

        @keyframes glow {
            from {
                text-shadow: 0 4px 20px rgba(255, 255, 255, 0.3);
            }

            to {
                text-shadow: 0 4px 30px rgba(255, 255, 255, 0.6), 0 0 40px rgba(42, 157, 143, 0.3);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes pulse {

            0%,
            100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .hero-section {
                padding: 80px 20px 50px;
                margin-bottom: 40px;
            }

            .form-card {
                padding: 30px 20px;
            }

            .form-section {
                padding: 20px;
                margin-bottom: 24px;
            }

            #map {
                height: 280px;
            }
        }

        /* Success/Error States */
        .form-feedback {
            padding: 12px 16px;
            border-radius: 8px;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .form-feedback.success {
            background: rgba(34, 197, 94, 0.1);
            color: #059669;
            border: 1px solid rgba(34, 197, 94, 0.2);
        }

        .form-feedback.error {
            background: rgba(239, 68, 68, 0.1);
            color: #dc2626;
            border: 1px solid rgba(239, 68, 68, 0.2);
        }

        /* Container Enhancements */
        .container {
            max-width: 900px;
            padding: 0 20px;
        }
    </style>

    <div class="container py-4">
        <!-- Enhanced Hero Section -->
        <div class="hero-section">
            <div class="content">
                <h1 class="hero-title">üêæ Report a Street Animal</h1>
                <p class="hero-subtitle">Help us rescue and treat animals in need. Your report can save a life.</p>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-12">
                <div class="form-card">
                    <form action="/report" method="POST" enctype="multipart/form-data">

                        <!-- Photo Upload Section -->
                        <div class="form-section">
                            <label for="photo" class="form-label">üì∏ Upload Animal Photo</label>
                            <input type="file" class="form-control" name="photo" required accept="image/*">
                            <small class="text-muted mt-2 d-block">Clear photos help our team assess the situation
                                better</small>
                        </div>

                        <!-- Description Section -->
                        <div class="form-section">
                            <label for="description" class="form-label">üìù Animal Condition</label>
                            <textarea class="form-control" name="description" rows="4"
                                placeholder="Please describe the animal's condition, behavior, and any visible injuries or concerns..."></textarea>
                        </div>

                        <!-- Donation Section -->
                        <div class="form-section">
                            <label for="donationIntent" class="form-label">üíù Donation You Can Offer (‚Çπ)</label>
                            <input type="number" class="form-control" name="donationIntent" min="0"
                                placeholder="Enter amount (optional)">
                            <small class="text-muted mt-2 d-block">Your contribution helps cover medical
                                expenses</small>
                        </div>

                        <!-- Location Section -->
                        <div class="form-section">
                            <label class="form-label">üìç Mark Location on Map</label>
                            <div class="map-instruction">
                                üéØ Click on the map to pinpoint the exact location where you found the animal
                            </div>
                            <div id="map"></div>
                            <input type="hidden" name="lat" id="lat">
                            <input type="hidden" name="lng" id="lng">
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn-enhanced">
                                <span>üì§</span>
                                Submit Report
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Leaflet JS + CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

    <script>
        const map = L.map('map').setView([28.6139, 77.2090], 13); // Default location

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);

        let marker;

        map.on('click', function (e) {
            const { lat, lng } = e.latlng;
            document.getElementById('lat').value = lat;
            document.getElementById('lng').value = lng;

            if (marker) {
                marker.setLatLng(e.latlng);
            } else {
                marker = L.marker(e.latlng).addTo(map);
            }
        });

        // Enhanced form validation
        document.querySelector('form').addEventListener('submit', function (e) {
            const lat = document.getElementById('lat').value;
            const lng = document.getElementById('lng').value;

            if (!lat || !lng) {
                e.preventDefault();
                alert('Please click on the map to select the animal\'s location.');
                return false;
            }
        });
    </script>

