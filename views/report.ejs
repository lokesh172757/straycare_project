<%- include("partials/header") %>

    <style>
        body {
            background: linear-gradient(to right, #c7d2fe, #d1fae5);
            /* Soft violet to mint */
            min-height: 100vh;
            font-family: 'Segoe UI', sans-serif;
        }

        .form-card {
            background-color: #f0f9ff;
            /* Soft blueish background */
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            padding: 35px;
            border: 2px solid #93c5fd;
        }

        #map {
            height: 300px;
            border-radius: 12px;
            border: 2px solid #bae6fd;
        }

        label {
            color: #0c4a6e;
            font-weight: 600;
        }

        .form-control,
        textarea {
            border-radius: 10px;
            border: 1px solid #93c5fd;
        }

        .form-control:focus {
            border-color: #2563eb;
            box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.25);
        }

        .btn-custom {
            background-color: #10b981;
            color: white;
            font-weight: bold;
            border-radius: 10px;
            padding: 10px;
        }

        .btn-custom:hover {
            background-color: #059669;
        }
    </style>

    <div class="container py-5">
        <h2 class="text-center text-primary mb-4 fw-bold">üêæ Report a Street Animal</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-card">

                    <form action="/report" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="photo" class="form-label">Upload Animal Photo</label>
                            <input type="file" class="form-control" name="photo" required>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Animal Condition</label>
                            <textarea class="form-control" name="description" rows="3"
                                placeholder="Describe the animal and its condition..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="donationIntent" class="form-label">Donation You Can Offer (‚Çπ)</label>
                            <input type="number" class="form-control" name="donationIntent" min="0"
                                placeholder="Optional">
                        </div>

                        <input type="hidden" name="lat" id="lat">
                        <input type="hidden" name="lng" id="lng">

                        <div class="mb-3">
                            <label class="form-label">Mark Location on Map</label>
                            <div id="map"></div>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-custom btn-lg">üì§ Submit Report</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

    <!-- Leaflet JS + CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

    <script>
        const map = L.map('map').setView([28.6139, 77.2090], 13); // Default location

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);

        let marker;

        map.on('click', function (e) {
            const { lat, lng } = e.latlng;
            document.getElementById('lat').value = lat;
            document.getElementById('lng').value = lng;

            if (marker) {
                marker.setLatLng(e.latlng);
            } else {
                marker = L.marker(e.latlng).addTo(map);
            }
        });
    </script>

    <%- include("partials/footer") %>