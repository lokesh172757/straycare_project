<%- include("../partials/header") %>

    <div class="container d-flex justify-content-center align-items-center mt-5" style="min-height: 70vh;">
        <div class="card shadow p-4" style="width: 100%; max-width: 500px;">

            <!-- Title -->
            <h3 class="text-center mb-4 text-primary fw-bold">Login (NGO)</h3>

            <!-- Login Form -->
            <form action="/auth/login/ngo" method="POST">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Email</label>
                    <input name="email" type="email" class="form-control" placeholder="ngo@example.org" required>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Password</label>
                    <input name="password" type="password" class="form-control" placeholder="********" required>
                </div>

                <div class="d-grid gap-2">
                    <button class="btn btn-success">Login</button>
                </div>
            </form>

            <!-- Register Prompt -->
            <p class="mt-3 text-center">
                NGO not registered?
                <a href="/auth/register/ngo">Register your NGO</a>
            </p>
        </div>
    </div>

    <%- include("../partials/footer") %>