    <style>
        :root {
            --primary-green: #2a9d8f;
            --dark-green: #1b4332;
            --light-green: #e6f5e9;
            --warm-yellow: #f4a261;
            --soft-orange: #e76f51;
            --cream: #fffbe7;
            --shadow-light: 0 4px 20px rgba(0, 0, 0, 0.08);
            --shadow-medium: 0 8px 40px rgba(0, 0, 0, 0.12);
            --shadow-heavy: 0 20px 60px rgba(0, 0, 0, 0.15);
            --gradient-primary: linear-gradient(135deg, var(--primary-green), #52b788);
            --gradient-hero: linear-gradient(135deg, rgba(26, 67, 50, 0.9), rgba(42, 157, 143, 0.8));
            --gradient-background: linear-gradient(135deg, #e6f5e9 0%, #fffbe7 50%, #f0f9f5 100%);
        }

        * {
            box-sizing: border-box;
        }

        body {
            background: var(--gradient-background);
            background-attachment: fixed;
            font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
            line-height: 1.6;
            color: #2c3e50;
            overflow-x: hidden;
            min-height: 100vh;
            position: relative;
        }

        /* Animated background particles */
        body::before {
            content: "";
            position: fixed;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, transparent 20%, rgba(42, 157, 143, 0.1) 21%, rgba(42, 157, 143, 0.1) 34%, transparent 35%, transparent);
            animation: float 8s ease-in-out infinite;
            z-index: 0;
            pointer-events: none;
        }

        @keyframes float {

            0%,
            100% {
                transform: translate(0px, 0px) rotate(0deg);
            }

            33% {
                transform: translate(30px, -30px) rotate(120deg);
            }

            66% {
                transform: translate(-20px, 20px) rotate(240deg);
            }
        }

        /* SVG Background Patterns */
        .svg-pattern {
            position: absolute;
            z-index: 0;
            opacity: 0.15;
            pointer-events: none;
        }

        .svg-top-left {
            top: -20px;
            left: -20px;
            width: 300px;
            transform: rotate(15deg);
            animation: svgFloat1 12s ease-in-out infinite;
        }

        .svg-bottom-right {
            bottom: -30px;
            right: -30px;
            width: 350px;
            transform: rotate(-10deg);
            animation: svgFloat2 10s ease-in-out infinite;
        }

        @keyframes svgFloat1 {

            0%,
            100% {
                transform: rotate(15deg) translateY(0px);
            }

            50% {
                transform: rotate(25deg) translateY(-15px);
            }
        }

        @keyframes svgFloat2 {

            0%,
            100% {
                transform: rotate(-10deg) translateY(0px);
            }

            50% {
                transform: rotate(-20deg) translateY(10px);
            }
        }

        .register-container {
            position: relative;
            z-index: 2;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .register-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: var(--shadow-heavy);
            width: 100%;
            max-width: 520px;
            position: relative;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .register-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--gradient-primary);
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .register-card:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-heavy);
        }

        .register-card:hover::before {
            transform: scaleX(1);
        }

        .card-content {
            padding: 3rem 2.5rem;
            text-align: center;
        }

        .register-icon {
            font-size: 3.5rem;
            background: var(--gradient-primary);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 1rem;
            display: block;
            text-align: center;
            animation: glow 2s ease-in-out infinite alternate;
        }

        @keyframes glow {
            from {
                filter: drop-shadow(0 4px 20px rgba(42, 157, 143, 0.3));
            }

            to {
                filter: drop-shadow(0 4px 30px rgba(42, 157, 143, 0.6));
            }
        }

        .register-title {
            font-weight: 800;
            font-size: 2.2rem;
            margin-bottom: 0.5rem;
            text-align: center;
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            position: relative;
        }

        .register-subtitle {
            color: #718096;
            text-align: center;
            margin-bottom: 2.5rem;
            font-size: 1rem;
            opacity: 0.8;
        }

        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
            text-align: left;
        }

        .form-label {
            font-weight: 600;
            color: var(--dark-green);
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            display: block;
        }

        .form-control {
            background: rgba(247, 250, 252, 0.8);
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 1rem 1.25rem;
            font-size: 1rem;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            width: 100%;
            color: var(--dark-green);
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.95);
            border-color: var(--primary-green);
            box-shadow: 0 0 0 3px rgba(42, 157, 143, 0.1);
            transform: translateY(-2px);
            outline: none;
        }

        .form-control::placeholder {
            color: #a0aec0;
            opacity: 1;
        }

        .btn-enhanced {
            background: var(--gradient-primary);
            border: none;
            color: white;
            padding: 1rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(42, 157, 143, 0.3);
            position: relative;
            overflow: hidden;
            width: 100%;
            font-size: 1.1rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            cursor: pointer;
        }

        .btn-enhanced::before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .btn-enhanced:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(42, 157, 143, 0.4);
            color: white;
            text-decoration: none;
        }

        .btn-enhanced:hover::before {
            left: 100%;
        }

        .btn-enhanced:active {
            transform: translateY(-1px);
        }

        .welcome-message {
            background: rgba(42, 157, 143, 0.1);
            border-radius: 12px;
            padding: 1rem;
            margin-bottom: 1.5rem;
            border-left: 4px solid var(--primary-green);
            text-align: left;
        }

        .welcome-message h6 {
            color: var(--dark-green);
            font-weight: 700;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .welcome-message p {
            font-size: 0.85rem;
            color: #666;
            margin: 0;
            line-height: 1.4;
        }

        /* Responsive adjustments */
        @media (max-width: 576px) {
            .card-content {
                padding: 2rem 1.5rem;
            }

            .register-title {
                font-size: 1.8rem;
            }

            .register-container {
                padding: 1rem;
            }

            .svg-top-left {
                width: 200px;
            }

            .svg-bottom-right {
                width: 250px;
            }
        }

        /* Form validation styles */
        .form-control:invalid {
            border-color: var(--soft-orange);
        }

        .form-control:valid {
            border-color: var(--primary-green);
        }

        /* Loading state for button */
        .btn-enhanced:disabled {
            opacity: 0.7;
            cursor: not-allowed;
            transform: none;
        }

        /* Focus styles for accessibility */
        .btn-enhanced:focus,
        .form-control:focus {
            outline: 2px solid var(--primary-green);
            outline-offset: 2px;
        }
    </style>

