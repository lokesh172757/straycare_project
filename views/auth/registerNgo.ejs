<%- include("../partials/header") %>

    <style>
        :root {
            --primary-green: #2a9d8f;
            --dark-green: #1b4332;
            --light-green: #e6f5e9;
            --warm-yellow: #f4a261;
            --soft-orange: #e76f51;
            --cream: #fffbe7;
            --shadow-light: 0 4px 20px rgba(0, 0, 0, 0.08);
            --shadow-medium: 0 8px 40px rgba(0, 0, 0, 0.12);
            --shadow-heavy: 0 20px 60px rgba(0, 0, 0, 0.15);
            --gradient-primary: linear-gradient(135deg, var(--primary-green), #52b788);
            --gradient-hero: linear-gradient(135deg, rgba(26, 67, 50, 0.9), rgba(42, 157, 143, 0.8));
            --gradient-background: linear-gradient(135deg, #e6f5e9 0%, #fffbe7 50%, #f0f9f5 100%);
        }

        * {
            box-sizing: border-box;
        }

        body {
            background: var(--gradient-background);
            background-attachment: fixed;
            font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
            line-height: 1.6;
            color: #2c3e50;
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

        /* Animated Background Patterns */
        .svg-pattern {
            position: absolute;
            z-index: 0;
            opacity: 0.1;
            pointer-events: none;
            animation: float 12s ease-in-out infinite;
        }

        .svg-top-left {
            top: -50px;
            left: -50px;
            width: 350px;
            animation-delay: 0s;
        }

        .svg-bottom-right {
            bottom: -50px;
            right: -50px;
            width: 400px;
            animation-delay: 6s;
        }

        .svg-middle {
            top: 50%;
            left: 20%;
            width: 200px;
            animation-delay: 3s;
            opacity: 0.05;
        }

        /* Enhanced Form Container */
        .form-overlay {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 24px;
            padding: 3rem;
            box-shadow: var(--shadow-heavy);
            z-index: 1;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            position: relative;
            overflow: hidden;
        }

        .form-overlay::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--gradient-primary);
            border-radius: 24px 24px 0 0;
        }

        .form-overlay:hover {
            transform: translateY(-8px);
            box-shadow: 0 25px 80px rgba(42, 157, 143, 0.15);
        }

        /* Enhanced Title */
        .form-title {
            font-weight: 800;
            font-size: clamp(1.8rem, 4vw, 2.4rem);
            margin-bottom: 0.5rem;
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            position: relative;
            display: inline-block;
        }

        .form-subtitle {
            color: #6b7280;
            font-size: 1.1rem;
            margin-bottom: 2rem;
            font-weight: 400;
        }

        /* Enhanced Form Elements */
        .form-label {
            font-weight: 600;
            color: var(--dark-green);
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
            display: block;
        }

        .form-control {
            border: 2px solid rgba(42, 157, 143, 0.1);
            border-radius: 12px;
            padding: 0.875rem 1rem;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
        }

        .form-control:focus {
            border-color: var(--primary-green);
            box-shadow: 0 0 0 3px rgba(42, 157, 143, 0.1);
            background: rgba(255, 255, 255, 0.95);
            outline: none;
        }

        .form-control::placeholder {
            color: #9ca3af;
            font-weight: 400;
        }

        /* Enhanced Button */
        .btn-enhanced {
            background: var(--gradient-primary);
            border: none;
            color: white;
            padding: 0.875rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(42, 157, 143, 0.3);
            position: relative;
            overflow: hidden;
            width: 100%;
        }

        .btn-enhanced::before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .btn-enhanced:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(42, 157, 143, 0.4);
            color: white;
            text-decoration: none;
        }

        .btn-enhanced:hover::before {
            left: 100%;
        }

        .btn-enhanced:active {
            transform: translateY(0);
        }

        /* Form Group Styling */
        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .form-group:last-of-type {
            margin-bottom: 2rem;
        }

        /* Input Icons */
        .input-icon {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary-green);
            opacity: 0.6;
            font-size: 1.1rem;
        }

        /* Animations */
        @keyframes float {

            0%,
            100% {
                transform: translate(0px, 0px) rotate(0deg);
            }

            33% {
                transform: translate(30px, -30px) rotate(120deg);
            }

            66% {
                transform: translate(-20px, 20px) rotate(240deg);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(-20px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        /* Form Animation */
        .form-overlay {
            animation: fadeInUp 0.8s ease-out;
        }

        .form-group {
            animation: slideIn 0.6s ease-out;
            animation-fill-mode: both;
        }

        .form-group:nth-child(2) {
            animation-delay: 0.1s;
        }

        .form-group:nth-child(3) {
            animation-delay: 0.2s;
        }

        .form-group:nth-child(4) {
            animation-delay: 0.3s;
        }

        .form-group:nth-child(5) {
            animation-delay: 0.4s;
        }

        .form-group:nth-child(6) {
            animation-delay: 0.5s;
        }

        .form-group:nth-child(7) {
            animation-delay: 0.6s;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .form-overlay {
                padding: 2rem 1.5rem;
                margin: 1rem;
            }

            .form-title {
                font-size: 1.8rem;
            }

            .form-subtitle {
                font-size: 1rem;
            }
        }

        /* Container Enhancement */
        .container {
            max-width: 600px;
            padding: 2rem 1rem;
        }

        /* Success/Error States */
        .form-control.is-valid {
            border-color: #10b981;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3e%3cpath fill='%2310b981' d='m2.3 6.73.8-.77-.8-.77.77-.8.77.8.77-.8.8.77-.8.77.8.77-.8.8-.77-.8-.77.8zm1.77-4.77L1.75 4.27l.77.77 1.27-1.27L6.27 1.5 7 2.27 3.27 6z'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 12px center;
            background-size: 16px;
        }

        .form-control.is-invalid {
            border-color: #ef4444;
        }
    </style>

