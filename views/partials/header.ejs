<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>StrayCare</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar-custom {
            background: linear-gradient(to right, #1e3c72, #2a5298);
        }

        .navbar-custom .nav-link {
            color: #e2e2e2;
            transition: color 0.3s, background-color 0.3s, transform 0.2s;
        }

        .navbar-custom .nav-link:hover {
            color: #ffffff;
            background-color: rgba(255, 255, 255, 0.1);
            transform: scale(1.05);
            border-radius: 5px;
        }

        .report-btn {
            background-color: #ffc107 !important;
            color: #212529 !important;
            font-weight: bold;
            padding: 6px 12px;
            border-radius: 5px;
            transition: transform 0.3s ease;
        }

        .report-btn:hover {
            background-color: #ffca2c !important;
            transform: scale(1.08);
            color: #000 !important;
        }

        .nav-highlight {
            color: #f8f9fa;
            font-weight: 500;
        }

        .navbar-brand {
            font-size: 1.5rem;
            color: #fff !important;
        }
    </style>
</head>

<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/">StrayCare</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">

                    <li class="nav-item">
                        <a class="nav-link nav-highlight" href="/">Home</a>
                    </li>

                    <% if (currentUserKind==="LOCAL" ) { %>
                        <li class="nav-item">
                            <a class="nav-link report-btn" href="/report/new">ðŸ“¢ Report</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-highlight" href="/user/dashboard">My Reports</a>
                        </li>
                        <% } %>

                            <li class="nav-item">
                                <a class="nav-link nav-highlight" href="/adoption">Adopt</a>
                            </li>

                            <% if (currentUserKind==="NGO" ) { %>
                                <li class="nav-item">
                                    <a class="nav-link nav-highlight" href="/ngo/dashboard">NGO Panel</a>
                                </li>
                                <% } %>

                                    <% if (userName) { %>
                                        <li class="nav-item">
                                            <span class="nav-link disabled text-light">Hi, <%= userName %> ðŸ‘‹</span>
                                        </li>
                                        <% } %>

                                            <% if (!currentUserId) { %>
                                                <!-- Login Dropdown -->
                                                <li class="nav-item dropdown">
                                                    <a class="nav-link dropdown-toggle nav-highlight" href="#"
                                                        role="button" data-bs-toggle="dropdown">
                                                        Login
                                                    </a>
                                                    <ul class="dropdown-menu dropdown-menu-end">
                                                        <li><a class="dropdown-item" href="/auth/login/local">User
                                                                Login</a></li>
                                                        <li><a class="dropdown-item" href="/auth/login/ngo">NGO
                                                                Login</a></li>
                                                    </ul>
                                                </li>

                                                <!-- Register Dropdown -->
                                                <li class="nav-item dropdown">
                                                    <a class="nav-link dropdown-toggle nav-highlight" href="#"
                                                        role="button" data-bs-toggle="dropdown">
                                                        Register
                                                    </a>
                                                    <ul class="dropdown-menu dropdown-menu-end">
                                                        <li><a class="dropdown-item" href="/auth/register/local">User
                                                                Register</a></li>
                                                        <li><a class="dropdown-item" href="/auth/register/ngo">NGO
                                                                Register</a></li>
                                                    </ul>
                                                </li>
                                                <% } else { %>
                                                    <li class="nav-item">
                                                        <a class="nav-link text-danger" href="/auth/logout">Logout</a>
                                                    </li>
                                                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <div class="container mt-3">
        <% if (success && success.length> 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>

                <% if (error && error.length> 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>
    </div>