<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>StrayCare</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">StrayCare</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>

                    <% if (currentUserKind==="LOCAL" ) { %>
                        <li class="nav-item"><a class="nav-link" href="/report/new">Report</a></li>
                        <li class="nav-item"><a class="nav-link" href="/user/dashboard">My Reports</a></li>
                        <% } %>

                            <li class="nav-item"><a class="nav-link" href="/adoption">Adopt</a></li>

                            <% if (currentUserKind==="NGO" ) { %>
                                <li class="nav-item"><a class="nav-link" href="/ngo/dashboard">NGO Panel</a></li>
                                <% } %>

                                    <% if (userName) { %>
                                        <li class="nav-item">
                                            <span class="nav-link disabled text-light">Hi, <%= userName %> ðŸ‘‹</span>
                                        </li>
                                        <% } %>

                                            <% if (!currentUserId) { %>
                                                <!-- Login Dropdown -->
                                                <li class="nav-item dropdown">
                                                    <a class="nav-link dropdown-toggle" href="#" role="button"
                                                        data-bs-toggle="dropdown">
                                                        Login
                                                    </a>
                                                    <ul class="dropdown-menu dropdown-menu-end">
                                                        <li><a class="dropdown-item" href="/auth/login/local">User
                                                                Login</a></li>
                                                        <li><a class="dropdown-item" href="/auth/login/ngo">NGO
                                                                Login</a></li>
                                                    </ul>
                                                </li>

                                                <!-- Register Dropdown -->
                                                <li class="nav-item dropdown">
                                                    <a class="nav-link dropdown-toggle" href="#" role="button"
                                                        data-bs-toggle="dropdown">
                                                        Register
                                                    </a>
                                                    <ul class="dropdown-menu dropdown-menu-end">
                                                        <li><a class="dropdown-item" href="/auth/register/local">User
                                                                Register</a></li>
                                                        <li><a class="dropdown-item" href="/auth/register/ngo">NGO
                                                                Register</a></li>
                                                    </ul>
                                                </li>
                                                <% } else { %>
                                                    <li class="nav-item">
                                                        <a class="nav-link text-danger" href="/auth/logout">Logout</a>
                                                    </li>
                                                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <div class="container mt-2">
        <% if (success && success.length> 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>

                <% if (error && error.length> 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>
    </div>