<%- include("../partials/header") %>

    <div class="container mt-5">
        <div class="text-center mb-4">
            <h2>ðŸ’Š Treat Animal</h2>
        </div>

        <form action="/ngo/treat/<%= report._id %>" method="POST" enctype="multipart/form-data"
            class="row g-4 shadow p-4 rounded bg-light">
            <!-- Report Description (Read-only) -->
            <div class="col-12">
                <label class="form-label fw-bold">Report Description</label>
                <div class="form-control bg-white" readonly>
                    <%= report.description %>
                </div>
            </div>

            <!-- After Treatment Photo Upload -->
            <div class="col-12">
                <label for="afterPhoto" class="form-label">Upload After Treatment Image</label>
                <input type="file" name="afterPhoto" id="afterPhoto" class="form-control" accept="image/*" required>
            </div>

            <!-- Health Notes -->
            <div class="col-12">
                <label for="healthNotes" class="form-label">Health Notes</label>
                <textarea name="healthNotes" id="healthNotes" class="form-control" rows="3"
                    placeholder="Describe health condition, treatment given, etc."></textarea>
            </div>

            <!-- Adoptable Checkbox -->
            <div class="col-md-6">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="adoptable" id="adoptable">
                    <label class="form-check-label fw-semibold" for="adoptable">
                        Mark as Adoptable
                    </label>
                </div>
            </div>

            <!-- Adoption Fee -->
            <div class="col-md-6">
                <label for="adoptionFee" class="form-label">Adoption Fee (â‚¹)</label>
                <input type="number" name="adoptionFee" class="form-control" id="adoptionFee" min="0" value="0">
            </div>

            <!-- Submit Button -->
            <div class="col-12 text-center">
                <button type="submit" class="btn btn-success px-4">âœ… Mark as Treated</button>
            </div>
        </form>
    </div>

    <%- include("../partials/footer") %>