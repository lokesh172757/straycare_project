<%- include("../partials/header") %>

    <style>
        :root {
            --primary-green: #2a9d8f;
            --dark-green: #1b4332;
            --light-green: #e6f5e9;
            --warm-yellow: #f4a261;
            --soft-orange: #e76f51;
            --cream: #fffbe7;
            --shadow-light: 0 4px 20px rgba(0, 0, 0, 0.08);
            --shadow-medium: 0 8px 40px rgba(0, 0, 0, 0.12);
            --shadow-heavy: 0 20px 60px rgba(0, 0, 0, 0.15);
            --gradient-primary: linear-gradient(135deg, var(--primary-green), #52b788);
            --gradient-hero: linear-gradient(135deg, rgba(26, 67, 50, 0.9), rgba(42, 157, 143, 0.8));
            --gradient-background: linear-gradient(135deg, #e6f5e9 0%, #fffbe7 50%, #f0f9f5 100%);
        }

        * {
            box-sizing: border-box;
        }

        body {
            background: var(--gradient-background);
            background-attachment: fixed;
            font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
            line-height: 1.6;
            color: #2c3e50;
            overflow-x: hidden;
            min-height: 100vh;
        }

        /* Enhanced Header Section */
        .page-header {
            background: var(--gradient-primary);
            border-radius: 24px;
            padding: 60px 40px;
            margin-bottom: 40px;
            color: white;
            text-align: center;
            position: relative;
            overflow: hidden;
            box-shadow: var(--shadow-heavy);
        }

        .page-header::before {
            content: "";
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, transparent 20%, rgba(255, 255, 255, 0.1) 21%, rgba(255, 255, 255, 0.1) 34%, transparent 35%, transparent);
            animation: float 8s ease-in-out infinite;
            z-index: 0;
        }

        .page-header .content {
            position: relative;
            z-index: 2;
        }

        .page-title {
            font-size: clamp(2rem, 4vw, 3rem);
            font-weight: 800;
            margin-bottom: 16px;
            background: linear-gradient(45deg, #ffffff, #f0f9f5);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: glow 2s ease-in-out infinite alternate;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            color: white;
            font-size: 1rem;
            font-weight: 600;
            padding: 12px 24px;
            border-radius: 25px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            animation: pulse 2s infinite;
        }

        /* Enhanced Form Container */
        .form-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 24px;
            padding: 40px;
            box-shadow: var(--shadow-medium);
            position: relative;
            overflow: hidden;
            animation: slideInUp 0.8s ease-out;
        }

        .form-container::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--gradient-primary);
            border-radius: 24px 24px 0 0;
        }

        /* Enhanced Form Elements */
        .form-label {
            font-weight: 700;
            color: var(--dark-green);
            margin-bottom: 8px;
            font-size: 1rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .form-control {
            border: 2px solid rgba(42, 157, 143, 0.1);
            border-radius: 12px;
            padding: 16px 20px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
        }

        .form-control:focus {
            border-color: var(--primary-green);
            box-shadow: 0 0 0 4px rgba(42, 157, 143, 0.1);
            background: white;
            transform: translateY(-2px);
        }

        .form-control:hover {
            border-color: rgba(42, 157, 143, 0.3);
        }

        /* Read-only field styling */
        .form-control.readonly {
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            color: #495057;
            border-color: rgba(42, 157, 143, 0.2);
            font-style: italic;
        }

        /* Enhanced File Upload */
        .file-upload-wrapper {
            position: relative;
            overflow: hidden;
            border: 2px dashed var(--primary-green);
            border-radius: 16px;
            background: linear-gradient(135deg, rgba(42, 157, 143, 0.05), rgba(82, 183, 136, 0.05));
            padding: 40px 20px;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .file-upload-wrapper:hover {
            border-color: var(--dark-green);
            background: linear-gradient(135deg, rgba(42, 157, 143, 0.1), rgba(82, 183, 136, 0.1));
            transform: translateY(-2px);
        }

        .file-upload-wrapper.has-file {
            border-style: solid;
            background: linear-gradient(135deg, rgba(42, 157, 143, 0.1), rgba(82, 183, 136, 0.1));
        }

        .file-upload-text {
            font-size: 1.1rem;
            color: var(--primary-green);
            font-weight: 600;
            margin-bottom: 8px;
        }

        .file-upload-hint {
            font-size: 0.9rem;
            color: #666;
        }

        .file-input {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            cursor: pointer;
        }

        /* Image Preview */
        .image-preview {
            max-width: 100%;
            max-height: 300px;
            height: auto;
            margin-top: 20px;
            border-radius: 16px;
            box-shadow: var(--shadow-medium);
            border: 3px solid white;
            animation: fadeIn 0.5s ease-out;
        }

        /* Enhanced Checkbox */
        .form-check {
            background: rgba(42, 157, 143, 0.05);
            border-radius: 12px;
            padding: 16px 20px;
            border: 1px solid rgba(42, 157, 143, 0.1);
            transition: all 0.3s ease;
        }

        .form-check:hover {
            background: rgba(42, 157, 143, 0.1);
            border-color: rgba(42, 157, 143, 0.2);
        }

        .form-check-input {
            width: 20px;
            height: 20px;
            border: 2px solid var(--primary-green);
            border-radius: 6px;
        }

        .form-check-input:checked {
            background-color: var(--primary-green);
            border-color: var(--primary-green);
        }

        .form-check-label {
            font-weight: 600;
            color: var(--dark-green);
            font-size: 1rem;
            margin-left: 8px;
        }

        /* Enhanced Submit Button */
        .btn-enhanced {
            background: var(--gradient-primary);
            border: none;
            color: white;
            padding: 16px 40px;
            border-radius: 25px;
            font-weight: 700;
            font-size: 1.1rem;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 12px;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px rgba(42, 157, 143, 0.3);
            position: relative;
            overflow: hidden;
            cursor: pointer;
            border: 0;
        }

        .btn-enhanced::before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .btn-enhanced:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(42, 157, 143, 0.4);
            color: white;
        }

        .btn-enhanced:hover::before {
            left: 100%;
        }

        .btn-enhanced:active {
            transform: translateY(-1px);
        }

        /* Section Dividers */
        .section {
            margin-bottom: 32px;
        }

        .section-title {
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--dark-green);
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        /* Animations */
        @keyframes float {

            0%,
            100% {
                transform: translate(0px, 0px) rotate(0deg);
            }

            33% {
                transform: translate(30px, -30px) rotate(120deg);
            }

            66% {
                transform: translate(-20px, 20px) rotate(240deg);
            }
        }

        @keyframes glow {
            from {
                text-shadow: 0 4px 20px rgba(255, 255, 255, 0.3);
            }

            to {
                text-shadow: 0 4px 30px rgba(255, 255, 255, 0.6), 0 0 40px rgba(42, 157, 143, 0.3);
            }
        }

        @keyframes pulse {

            0%,
            100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }

        @keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .page-header {
                padding: 40px 20px;
                margin-bottom: 30px;
            }

            .form-container {
                padding: 30px 20px;
            }

            .file-upload-wrapper {
                padding: 30px 15px;
            }
        }

        /* Container Enhancements */
        .container {
            max-width: 800px;
            padding: 0 20px;
        }
    </style>

