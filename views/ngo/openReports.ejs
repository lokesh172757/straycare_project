<%- include("../partials/header") %>

    <div class="container mt-4">
        <h2 class="mb-4">Open Animal Reports</h2>

        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Image</th>
                    <th>Description</th>
                    <th>Location</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% reports.forEach(r=> { %>
                    <tr>
                        <td>
                            <img src="<%= r.photoUrl %>" width="100" class="img-thumbnail" />
                        </td>
                        <td>
                            <%= r.description %>
                        </td>
                        <td>
                            [<%= r.location.coordinates[1] %>, <%= r.location.coordinates[0] %>]
                        </td>
                        <td>
                            <!-- View full report -->
                            <a href="/report/<%= r._id %>" class="btn btn-info btn-sm mb-1">View Details</a>
                            <br>
                            <!-- NGO treat action -->
                            <a href="/ngo/treat/<%= r._id %>" class="btn btn-success btn-sm">Treat</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <%- include("../partials/footer") %>