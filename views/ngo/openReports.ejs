<%- include("../partials/header") %>

    <style>
        :root {
            --primary-green: #2a9d8f;
            --dark-green: #1b4332;
            --light-green: #e6f5e9;
            --warm-yellow: #f4a261;
            --soft-orange: #e76f51;
            --cream: #fffbe7;
            --urgent-red: #e74c3c;
            --shadow-light: 0 4px 20px rgba(0, 0, 0, 0.08);
            --shadow-medium: 0 8px 40px rgba(0, 0, 0, 0.12);
            --shadow-heavy: 0 20px 60px rgba(0, 0, 0, 0.15);
            --gradient-primary: linear-gradient(135deg, var(--primary-green), #52b788);
            --gradient-hero: linear-gradient(135deg, rgba(26, 67, 50, 0.9), rgba(42, 157, 143, 0.8));
            --gradient-background: linear-gradient(135deg, #e6f5e9 0%, #fffbe7 50%, #f0f9f5 100%);
            --gradient-urgent: linear-gradient(135deg, #e74c3c, #c0392b);
        }

        * {
            box-sizing: border-box;
        }

        body {
            background: var(--gradient-background);
            background-attachment: fixed;
            font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
            line-height: 1.6;
            color: #2c3e50;
            overflow-x: hidden;
        }

        /* Enhanced Hero Section */
        .hero-section {
            background: url("https://images.unsplash.com/photo-1601758228041-f3b2795255f1?ixlib=rb-4.0.3&auto=format&fit=crop&w=1470&q=80") center/cover no-repeat;
            padding: 100px 20px;
            color: white;
            border-radius: 24px;
            margin-bottom: 60px;
            position: relative;
            overflow: hidden;
            box-shadow: var(--shadow-heavy);
        }

        .hero-section::before {
            content: "";
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, transparent 20%, rgba(42, 157, 143, 0.1) 21%, rgba(42, 157, 143, 0.1) 34%, transparent 35%, transparent);
            animation: float 8s ease-in-out infinite;
            z-index: 0;
        }

        .hero-section::after {
            content: "";
            position: absolute;
            inset: 0;
            background: var(--gradient-hero);
            border-radius: 24px;
            z-index: 1;
        }

        .hero-section .content {
            position: relative;
            z-index: 2;
            max-width: 700px;
            margin: 0 auto;
        }

        .hero-title {
            font-size: clamp(2.5rem, 5vw, 3.5rem);
            font-weight: 800;
            margin-bottom: 16px;
            background: linear-gradient(45deg, #ffffff, #f0f9f5);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: glow 2s ease-in-out infinite alternate;
            text-shadow: 0 4px 20px rgba(255, 255, 255, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
        }

        .hero-subtitle {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 16px;
            padding: 16px 24px;
            font-size: 1.2rem;
            font-weight: 600;
            opacity: 0.95;
            margin: 0;
            animation: fadeInUp 1s ease-out 0.3s both;
            border-left: 4px solid var(--warm-yellow);
        }

        /* Enhanced Table Container */
        .table-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 24px;
            overflow: hidden;
            box-shadow: var(--shadow-medium);
            margin-bottom: 40px;
            transition: all 0.3s ease;
        }

        .table-container:hover {
            box-shadow: var(--shadow-heavy);
        }

        /* Enhanced Table */
        .enhanced-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 0.95rem;
            margin: 0;
        }

        .enhanced-table thead {
            background: var(--gradient-primary);
            color: white;
        }

        .enhanced-table th {
            padding: 20px 16px;
            text-align: center;
            font-weight: 700;
            font-size: 1rem;
            border: none;
            position: relative;
        }

        .enhanced-table th::after {
            content: "";
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 2px;
            background: rgba(255, 255, 255, 0.2);
        }

        .enhanced-table tbody tr {
            transition: all 0.3s ease;
            border-bottom: 1px solid rgba(42, 157, 143, 0.1);
            background: rgba(255, 255, 255, 0.9);
        }

        .enhanced-table tbody tr:hover {
            background: rgba(42, 157, 143, 0.05);
            transform: scale(1.01);
            box-shadow: 0 4px 20px rgba(42, 157, 143, 0.1);
        }

        .enhanced-table tbody tr:last-child {
            border-bottom: none;
        }

        .enhanced-table td {
            padding: 20px 16px;
            vertical-align: middle;
            border: none;
            color: #2c3e50;
        }

        /* Animal Image Styling */
        .animal-image {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 16px;
            border: 3px solid var(--primary-green);
            box-shadow: var(--shadow-light);
            transition: all 0.3s ease;
        }

        .animal-image:hover {
            transform: scale(1.1);
            box-shadow: var(--shadow-medium);
            border-color: var(--warm-yellow);
        }

        /* Description Styling */
        .description-cell {
            text-align: left;
            max-width: 300px;
        }

        .description-text {
            color: #555;
            line-height: 1.5;
            padding: 12px 16px;
            background: rgba(42, 157, 143, 0.05);
            border-radius: 12px;
            border-left: 4px solid var(--primary-green);
            font-weight: 500;
        }

        /* Map Container */
        .map-container {
            width: 250px;
            height: 180px;
            border-radius: 16px;
            overflow: hidden;
            border: 3px solid var(--primary-green);
            box-shadow: var(--shadow-light);
            transition: all 0.3s ease;
            position: relative;
        }

        .map-container:hover {
            transform: scale(1.05);
            box-shadow: var(--shadow-medium);
            border-color: var(--warm-yellow);
        }

        .map-container::before {
            content: "üìç";
            position: absolute;
            top: 8px;
            right: 8px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 50%;
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            z-index: 10;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .map-iframe {
            width: 100%;
            height: 100%;
            border: none;
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            flex-direction: column;
            gap: 8px;
            min-width: 160px;
        }

        .btn-enhanced {
            padding: 10px 16px;
            border-radius: 20px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: all 0.3s ease;
            border: none;
            font-size: 0.9rem;
            position: relative;
            overflow: hidden;
        }

        .btn-enhanced::before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .btn-enhanced:hover::before {
            left: 100%;
        }

        .btn-view {
            background: linear-gradient(135deg, #3498db, #2980b9);
            color: white;
            box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
        }

        .btn-view:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(52, 152, 219, 0.4);
            color: white;
            text-decoration: none;
        }

        .btn-treat {
            background: var(--gradient-primary);
            color: white;
            box-shadow: 0 4px 15px rgba(42, 157, 143, 0.3);
        }

        .btn-treat:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(42, 157, 143, 0.4);
            color: white;
            text-decoration: none;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 80px 20px;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(15px);
            border-radius: 20px;
            box-shadow: var(--shadow-light);
            margin-bottom: 40px;
            border: 2px dashed rgba(42, 157, 143, 0.3);
        }

        .empty-state-icon {
            font-size: 4rem;
            margin-bottom: 24px;
            opacity: 0.6;
            animation: float 3s ease-in-out infinite;
        }

        .empty-state-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--primary-green);
            margin-bottom: 12px;
        }

        .empty-state-text {
            color: #8b9db7;
            font-size: 1.1rem;
            margin-bottom: 0;
            font-weight: 500;
        }

        /* Urgent Badge */
        .urgent-badge {
            position: absolute;
            top: -8px;
            right: -8px;
            background: var(--gradient-primary);
            color: white;
            border-radius: 50%;
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.8rem;
            font-weight: bold;
            animation: pulse 2s infinite;
            box-shadow: 0 2px 8px rgba(42, 157, 143, 0.3);
        }

        /* Animations */
        @keyframes float {

            0%,
            100% {
                transform: translate(0px, 0px) rotate(0deg);
            }

            33% {
                transform: translate(30px, -30px) rotate(120deg);
            }

            66% {
                transform: translate(-20px, 20px) rotate(240deg);
            }
        }

        @keyframes glow {
            from {
                text-shadow: 0 4px 20px rgba(255, 255, 255, 0.3);
            }

            to {
                text-shadow: 0 4px 30px rgba(255, 255, 255, 0.6), 0 0 40px rgba(42, 157, 143, 0.3);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes pulse {

            0%,
            100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }
        }

        /* Container Enhancements */
        .container {
            max-width: 1400px;
            padding: 0 20px;
            margin: 0 auto;
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .enhanced-table {
                font-size: 0.9rem;
            }

            .enhanced-table th,
            .enhanced-table td {
                padding: 16px 12px;
            }

            .animal-image {
                width: 100px;
                height: 100px;
            }

            .map-container {
                width: 200px;
                height: 150px;
            }
        }

        @media (max-width: 768px) {
            .hero-section {
                padding: 80px 20px;
                margin-bottom: 40px;
            }

            .table-container {
                border-radius: 16px;
                overflow-x: auto;
            }

            .enhanced-table {
                min-width: 900px;
                font-size: 0.85rem;
            }

            .enhanced-table th,
            .enhanced-table td {
                padding: 12px 10px;
            }

            .animal-image {
                width: 80px;
                height: 80px;
            }

            .map-container {
                width: 180px;
                height: 120px;
            }

            .description-text {
                padding: 8px 12px;
                font-size: 0.85rem;
            }

            .action-buttons {
                min-width: 140px;
            }
        }

        @media (max-width: 480px) {
            .enhanced-table {
                min-width: 800px;
            }

            .description-cell {
                max-width: 200px;
            }

            .map-container {
                width: 160px;
                height: 100px;
            }
        }
    </style>

    <div class="container mt-5">
        <!-- Enhanced Hero Section -->
        <div class="hero-section text-center">
            <div class="content">
                <h1 class="hero-title">
                    <span>üìã</span>
                    <span>Open Animal Reports</span>
                </h1>
                <div class="hero-subtitle">
                    Monitor and manage all activities in one place
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <% if (reports.length===0) { %>
            <div class="empty-state">
                <div class="empty-state-icon">üéâ</div>
                <h3 class="empty-state-title">No Open Reports Found</h3>
                <p class="empty-state-text">Great news! All reported animals have been helped. Keep up the amazing work!
                </p>
            </div>
            <% } else { %>
                <div class="table-container">
                    <table class="enhanced-table">
                        <thead>
                            <tr>
                                <th>üì∑ Animal Image</th>
                                <th>üìù Description</th>
                                <th>üìç Location Map</th>
                                <th>‚öôÔ∏è Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% reports.forEach(r=> { %>
                                <tr>
                                    <!-- Animal Image -->
                                    <td style="position: relative;">
                                        <img src="<%= r.photoUrl %>" class="animal-image" alt="Animal Photo">
                                        <div class="urgent-badge">!</div>
                                    </td>

                                    <!-- Description -->
                                    <td class="description-cell">
                                        <div class="description-text">
                                            <%= r.description || "No description provided" %>
                                        </div>
                                    </td>

                                    <!-- Map -->
                                    <td>
                                        <div class="map-container">
                                            <iframe class="map-iframe" loading="lazy" allowfullscreen
                                                src="https://www.openstreetmap.org/export/embed.html?bbox=<%= r.location.coordinates[0] - 0.001 %>,<%= r.location.coordinates[1] - 0.001 %>,<%= r.location.coordinates[0] + 0.001 %>,<%= r.location.coordinates[1] + 0.001 %>&layer=mapnik&marker=<%= r.location.coordinates[1] %>,<%= r.location.coordinates[0] %>">
                                            </iframe>
                                        </div>
                                    </td>

                                    <!-- Action Buttons -->
                                    <td>
                                        <div class="action-buttons">
                                            <a href="/report/<%= r._id %>" class="btn-enhanced btn-view">
                                                <span>üîç</span>
                                                <span>View Details</span>
                                            </a>
                                            <a href="/ngo/treat/<%= r._id %>" class="btn-enhanced btn-treat">
                                                <span>üíä</span>
                                                <span>Mark as Treated</span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
                <% } %>
    </div>

    <%- include("../partials/footer") %>