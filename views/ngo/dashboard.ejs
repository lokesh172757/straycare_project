<%- include("../partials/header") %>

    <div class="container mt-4">
        <h2>Open Reports</h2>

        <% if (reports.length===0) { %>
            <p>No open reports at the moment.</p>
            <% } else { %>
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    <% reports.forEach(report=> { %>
                        <div class="col">
                            <div class="card h-100 shadow">
                                <img src="<%= report.photoUrl %>" class="card-img-top"
                                    style="height: 200px; object-fit: cover;" alt="Report Image">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= report.status %>
                                    </h5>
                                    <p class="card-text"><strong>Description:</strong>
                                        <%= report.description || "No description" %>
                                    </p>
                                    <p class="card-text"><strong>Donation Intent:</strong> â‚¹<%= report.donationIntent ||
                                            0 %>
                                    </p>
                                    <a href="/report/<%= report._id %>" class="btn btn-primary btn-sm mt-2">View
                                        Details</a>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <% } %>
    </div>

    <%- include("../partials/footer") %>