<%- include("../partials/header") %>

    <!-- Background Theme -->
    <style>
        body {
            background: linear-gradient(to right, #f8f9fa, #e2ebf0);
            background-attachment: fixed;
        }

        .dashboard-wrapper {
            padding-top: 50px;
            padding-bottom: 30px;
        }
    </style>

    <div class="container dashboard-wrapper">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-primary border-bottom border-3 pb-2 mb-3">üè• NGO Dashboard</h2>

            <p
                class="text-muted fst-italic px-3 py-2 border-start border-4 border-primary bg-light rounded shadow-sm d-inline-block">
                <strong class="text-primary">Monitor and manage all activities in one place</strong>
            </p>

        </div>

        <div class="row g-4 justify-content-center">
            <!-- Total Reports -->
            <div class="col-md-6 col-lg-4 col-xl-3">
                <div class="card text-white h-100 shadow-lg border-0 hover-scale"
                    style="background: linear-gradient(135deg, #667eea, #764ba2);">
                    <div class="card-body text-center">
                        <h5 class="card-title">üìã Total Reports</h5>
                        <p class="display-6 fw-bold">
                            <%= totalReports %>
                        </p>
                        <a href="/ngo/reports" class="btn btn-outline-light btn-sm mt-2">View Reports</a>
                    </div>
                </div>
            </div>

            <!-- Open Reports -->
            <div class="col-md-6 col-lg-4 col-xl-3">
                <div class="card text-white h-100 shadow-lg border-0 hover-scale"
                    style="background: linear-gradient(135deg, #56ab2f, #a8e063);">
                    <div class="card-body text-center">
                        <h5 class="card-title">üü¢ Open Reports</h5>
                        <p class="display-6 fw-bold">
                            <%= openReports %>
                        </p>
                        <a href="/ngo/reports" class="btn btn-outline-light btn-sm mt-2">Open Reports</a>
                    </div>
                </div>
            </div>

            <!-- Treated Animals -->
            <div class="col-md-6 col-lg-4 col-xl-3">
                <div class="card text-white h-100 shadow-lg border-0 hover-scale"
                    style="background: linear-gradient(135deg, #43cea2, #185a9d);">
                    <div class="card-body text-center">
                        <h5 class="card-title">üíâ Treated Animals</h5>
                        <p class="display-6 fw-bold">
                            <%= treatedAnimals %>
                        </p>
                        <a href="/ngo/treated" class="btn btn-outline-light btn-sm mt-2">View Treated</a>
                    </div>
                </div>
            </div>

            <!-- Adoption Requests -->
            <div class="col-md-6 col-lg-4 col-xl-3">
                <div class="card text-white h-100 shadow-lg border-0 hover-scale"
                    style="background: linear-gradient(135deg, #f7971e, #ffd200);">
                    <div class="card-body text-center">
                        <h5 class="card-title">üì¨ Adoption Requests</h5>
                        <p class="display-6 fw-bold">
                            <%= adoptionRequests %>
                        </p>
                        <a href="/ngo/adoptions" class="btn btn-outline-dark btn-sm mt-2">View Requests</a>
                    </div>
                </div>
            </div>

            <!-- Manage Ads -->
            <div class="col-md-6 col-lg-4 col-xl-3">
                <div class="card text-white h-100 shadow-lg border-0 hover-scale"
                    style="background: linear-gradient(135deg, #000428, #004e92);">
                    <div class="card-body text-center">
                        <h5 class="card-title">üì¢ Manage Ads</h5>
                        <a href="/ads" class="btn btn-outline-light btn-sm mt-3">View Ads</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include("../partials/footer") %>

        <style>
            .hover-scale {
                transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
                border-radius: 1rem;
            }

            .hover-scale:hover {
                transform: translateY(-5px) scale(1.02);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
            }

            .card .card-body h5 {
                font-weight: 600;
            }
        </style>