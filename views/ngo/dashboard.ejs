<%- include("../partials/header") %>

    <style>
        :root {
            --primary-green: #2a9d8f;
            --dark-green: #1b4332;
            --light-green: #e6f5e9;
            --warm-yellow: #f4a261;
            --soft-orange: #e76f51;
            --cream: #fffbe7;
            --shadow-light: 0 4px 20px rgba(0, 0, 0, 0.08);
            --shadow-medium: 0 8px 40px rgba(0, 0, 0, 0.12);
            --shadow-heavy: 0 20px 60px rgba(0, 0, 0, 0.15);
            --gradient-primary: linear-gradient(135deg, var(--primary-green), #52b788);
            --gradient-hero: linear-gradient(135deg, rgba(26, 67, 50, 0.9), rgba(42, 157, 143, 0.8));
            --gradient-background: linear-gradient(135deg, #e6f5e9 0%, #fffbe7 50%, #f0f9f5 100%);
        }


        body, * {
            font-family: 'Segoe UI Emoji', 'Apple Color Emoji', 'Noto Color Emoji',
                        'Twemoji Mozilla', 'EmojiOne Color', sans-serif !important;
        }

        * {
            box-sizing: border-box;
        }

        body {
            background: var(--gradient-background);
            background-attachment: fixed;
            font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
            line-height: 1.6;
            color: #2c3e50;
            overflow-x: hidden;
        }

        /* Dashboard Wrapper */
        .dashboard-wrapper {
            padding-top: 50px;
            padding-bottom: 50px;
        }

        /* Enhanced Hero Section */
        .hero-section {
            background: url("https://images.unsplash.com/photo-1576091160399-112ba8d25d1f?ixlib=rb-4.0.3&auto=format&fit=crop&w=1470&q=80") center/cover no-repeat;
            padding: 80px 20px;
            color: white;
            border-radius: 24px;
            margin-bottom: 60px;
            position: relative;
            overflow: hidden;
            box-shadow: var(--shadow-heavy);
        }

        .hero-section::before {
            content: "";
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, transparent 20%, rgba(42, 157, 143, 0.1) 21%, rgba(42, 157, 143, 0.1) 34%, transparent 35%, transparent);
            animation: float 8s ease-in-out infinite;
            z-index: 0;
        }

        .hero-section::after {
            content: "";
            position: absolute;
            inset: 0;
            background: var(--gradient-hero);
            border-radius: 24px;
            z-index: 1;
        }

        .hero-section .content {
            position: relative;
            z-index: 2;
            max-width: 600px;
            margin: 0 auto;
        }

        .hero-title {
            font-size: clamp(2.2rem, 4vw, 3rem);
            font-weight: 800;
            margin-bottom: 16px;
            background: linear-gradient(45deg, #ffffff, #f0f9f5);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: glow 2s ease-in-out infinite alternate;
            text-shadow: 0 4px 20px rgba(255, 255, 255, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
        }

        .hero-subtitle {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 16px;
            padding: 16px 24px;
            font-size: 1.1rem;
            font-weight: 500;
            opacity: 0.95;
            margin: 0;
            animation: fadeInUp 1s ease-out 0.3s both;
            border-left: 4px solid var(--warm-yellow);
        }

        .hero-subtitle strong {
            color: var(--cream);
            font-weight: 700;
        }

        /* Enhanced Dashboard Cards */
        .dashboard-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            box-shadow: var(--shadow-light);
            position: relative;
            height: 100%;
        }

        .dashboard-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--card-gradient, var(--gradient-primary));
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .dashboard-card:hover {
            transform: translateY(-12px) scale(1.02);
            box-shadow: var(--shadow-heavy);
        }

        .dashboard-card:hover::before {
            transform: scaleX(1);
        }

        .dashboard-card-body {
            padding: 32px 24px;
            text-align: center;
            position: relative;
            z-index: 2;
        }

        .card-icon {
            font-size: 2.5rem;
            margin-bottom: 16px;
            display: block;
            animation: bounce 2s infinite;
        }

        .card-title {
            font-size: 1.1rem;
            font-weight: 700;
            color: var(--dark-green);
            margin-bottom: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .card-number {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 20px;
            background: var(--card-gradient, var(--gradient-primary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: countUp 2s ease-out;
        }

        .card-button {
            background: var(--card-gradient, var(--gradient-primary));
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 25px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(42, 157, 143, 0.3);
            position: relative;
            overflow: hidden;
            font-size: 0.9rem;
        }

        .card-button::before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .card-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(42, 157, 143, 0.4);
            color: white;
            text-decoration: none;
        }

        .card-button:hover::before {
            left: 100%;
        }

        /* Card Color Variants */
        .card-reports {
            --card-gradient: linear-gradient(135deg, #667eea, #764ba2);
        }

        .card-open {
            --card-gradient: linear-gradient(135deg, #56ab2f, #a8e063);
        }

        .card-treated {
            --card-gradient: linear-gradient(135deg, #43cea2, #185a9d);
        }

        .card-adoptions {
            --card-gradient: linear-gradient(135deg, #f7971e, #ffd200);
        }

        .card-ads {
            --card-gradient: linear-gradient(135deg, #2c3e50, #3498db);
        }

        /* Animations */
        @keyframes float {

            0%,
            100% {
                transform: translate(0px, 0px) rotate(0deg);
            }

            33% {
                transform: translate(30px, -30px) rotate(120deg);
            }

            66% {
                transform: translate(-20px, 20px) rotate(240deg);
            }
        }

        @keyframes glow {
            from {
                text-shadow: 0 4px 20px rgba(255, 255, 255, 0.3);
            }

            to {
                text-shadow: 0 4px 30px rgba(255, 255, 255, 0.6), 0 0 40px rgba(42, 157, 143, 0.3);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes bounce {

            0%,
            20%,
            50%,
            80%,
            100% {
                transform: translateY(0);
            }

            40% {
                transform: translateY(-10px);
            }

            60% {
                transform: translateY(-5px);
            }
        }

        @keyframes countUp {
            from {
                opacity: 0;
                transform: scale(0.5);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        /* Container Enhancements */
        .container {
            max-width: 1200px;
            padding: 0 20px;
        }

        .row {
            --bs-gutter-x: 2rem;
            --bs-gutter-y: 2rem;
        }

        /* Quick Stats Bar */
        .stats-summary {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(15px);
            border-radius: 16px;
            padding: 20px;
            margin-bottom: 40px;
            box-shadow: var(--shadow-light);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .stats-summary h6 {
            color: var(--dark-green);
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stats-summary p {
            margin: 0;
            color: #666;
            font-size: 0.95rem;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .hero-section {
                padding: 60px 20px;
                margin-bottom: 40px;
            }

            .dashboard-wrapper {
                padding-top: 30px;
                padding-bottom: 30px;
            }

            .dashboard-card-body {
                padding: 24px 20px;
            }

            .card-number {
                font-size: 2.5rem;
            }

            .row {
                --bs-gutter-x: 1rem;
                --bs-gutter-y: 1.5rem;
            }
        }

        @media (max-width: 480px) {
            .hero-title {
                font-size: 2rem;
            }

            .hero-subtitle {
                font-size: 1rem;
                padding: 12px 16px;
            }

            .card-number {
                font-size: 2rem;
            }
        }
    </style>

