<%- include("../partials/header") %>

    <style>
        :root {
            --primary-green: #2a9d8f;
            --dark-green: #1b4332;
            --light-green: #e6f5e9;
            --warm-yellow: #f4a261;
            --soft-orange: #e76f51;
            --cream: #fffbe7;
            --shadow-light: 0 4px 20px rgba(0, 0, 0, 0.08);
            --shadow-medium: 0 8px 40px rgba(0, 0, 0, 0.12);
            --shadow-heavy: 0 20px 60px rgba(0, 0, 0, 0.15);
            --gradient-primary: linear-gradient(135deg, var(--primary-green), #52b788);
            --gradient-hero: linear-gradient(135deg, rgba(26, 67, 50, 0.9), rgba(42, 157, 143, 0.8));
            --gradient-background: linear-gradient(135deg, #e6f5e9 0%, #fffbe7 50%, #f0f9f5 100%);
        }

        * {
            box-sizing: border-box;
        }

        body {
            background: var(--gradient-background);
            background-attachment: fixed;
            font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
            line-height: 1.6;
            color: #2c3e50;
            overflow-x: hidden;
        }

        .treated-page {
            min-height: 100vh;
            padding: 40px 0;
        }

        /* Enhanced Hero Section */
        .hero-section {
            background: url("https://images.unsplash.com/photo-1548199973-03cce0bbc87b?ixlib=rb-4.0.3&auto=format&fit=crop&w=1470&q=80") center/cover no-repeat;
            padding: 120px 20px;
            color: white;
            border-radius: 24px;
            margin-bottom: 80px;
            position: relative;
            overflow: hidden;
            box-shadow: var(--shadow-heavy);
        }

        .hero-section::before {
            content: "";
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, transparent 20%, rgba(42, 157, 143, 0.1) 21%, rgba(42, 157, 143, 0.1) 34%, transparent 35%, transparent);
            animation: float 8s ease-in-out infinite;
            z-index: 0;
        }

        .hero-section::after {
            content: "";
            position: absolute;
            inset: 0;
            background: var(--gradient-hero);
            border-radius: 24px;
            z-index: 1;
        }

        .hero-section .content {
            position: relative;
            z-index: 2;
            max-width: 700px;
            margin: 0 auto;
        }

        .hero-title {
            font-size: clamp(2.5rem, 5vw, 3.5rem);
            font-weight: 800;
            margin-bottom: 24px;
            background: linear-gradient(45deg, #ffffff, #f0f9f5);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: glow 2s ease-in-out infinite alternate;
            text-shadow: 0 4px 20px rgba(255, 255, 255, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 16px;
        }

        .highlight-box {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            padding: 20px 32px;
            font-size: 1.3rem;
            font-weight: 600;
            opacity: 0.95;
            margin: 0;
            animation: fadeInUp 1s ease-out 0.3s both;
            border-left: 4px solid var(--warm-yellow);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        /* Enhanced Cards */
        .treated-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            box-shadow: var(--shadow-light);
            position: relative;
        }

        .treated-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--gradient-primary);
            transform: scaleX(0);
            transition: transform 0.3s ease;
            z-index: 5;
        }

        .treated-card:hover {
            transform: translateY(-12px) scale(1.02);
            box-shadow: var(--shadow-heavy);
        }

        .treated-card:hover::before {
            transform: scaleX(1);
        }

        .card-img-top {
            height: 220px;
            object-fit: cover;
            transition: transform 0.4s ease;
            border-top-left-radius: 20px;
            border-top-right-radius: 20px;
        }

        .treated-card:hover .card-img-top {
            transform: scale(1.1);
        }

        .card-body {
            padding: 24px;
            color: #2c3e50;
        }

        .card-title {
            font-weight: 700;
            color: var(--dark-green);
            font-size: 1.3rem;
            margin-bottom: 16px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .card-text {
            font-size: 0.95rem;
            color: #666;
            line-height: 1.6;
            margin-bottom: 12px;
        }

        .card-text strong {
            color: var(--dark-green);
            font-weight: 600;
        }

        /* Enhanced Ribbons */
        .ribbon {
            position: absolute;
            top: 16px;
            right: -20px;
            transform: rotate(45deg);
            color: white;
            padding: 8px 24px;
            font-size: 0.85rem;
            font-weight: 700;
            z-index: 10;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .ribbon.adoptable {
            background: linear-gradient(135deg, #27ae60, #2ecc71);
            animation: pulse-green 2s infinite;
        }

        .ribbon.not-adoptable {
            background: linear-gradient(135deg, #e67e22, #f39c12);
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 80px 20px;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(15px);
            border-radius: 20px;
            box-shadow: var(--shadow-light);
            margin-bottom: 40px;
            border: 2px dashed rgba(42, 157, 143, 0.3);
        }

        .empty-state-icon {
            font-size: 4rem;
            margin-bottom: 24px;
            opacity: 0.6;
            animation: float 3s ease-in-out infinite;
        }

        .empty-state-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--primary-green);
            margin-bottom: 12px;
        }

        .empty-state-text {
            color: #8b9db7;
            font-size: 1.1rem;
            margin-bottom: 0;
            font-weight: 500;
        }

        /* Animations */
        @keyframes float {

            0%,
            100% {
                transform: translate(0px, 0px) rotate(0deg);
            }

            33% {
                transform: translate(30px, -30px) rotate(120deg);
            }

            66% {
                transform: translate(-20px, 20px) rotate(240deg);
            }
        }

        @keyframes glow {
            from {
                text-shadow: 0 4px 20px rgba(255, 255, 255, 0.3);
            }

            to {
                text-shadow: 0 4px 30px rgba(255, 255, 255, 0.6), 0 0 40px rgba(42, 157, 143, 0.3);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes pulse-green {

            0%,
            100% {
                transform: rotate(45deg) scale(1);
            }

            50% {
                transform: rotate(45deg) scale(1.05);
            }
        }

        /* Container Enhancements */
        .container {
            max-width: 1200px;
            padding: 0 20px;
        }

        .row {
            --bs-gutter-x: 2rem;
            --bs-gutter-y: 2rem;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .hero-section {
                padding: 100px 20px;
                margin-bottom: 60px;
            }

            .highlight-box {
                padding: 16px 24px;
                font-size: 1.1rem;
                border-radius: 16px;
            }

            .card-body {
                padding: 20px;
            }

            .card-img-top {
                height: 200px;
            }

            .ribbon {
                padding: 6px 20px;
                font-size: 0.8rem;
                right: -18px;
                top: 12px;
            }
        }

        @media (max-width: 480px) {
            .row {
                --bs-gutter-x: 1rem;
                --bs-gutter-y: 1.5rem;
            }

            .card-img-top {
                height: 180px;
            }
        }

        /* Success Message */
        .success-message {
            background: rgba(39, 174, 96, 0.1);
            border: 1px solid rgba(39, 174, 96, 0.2);
            border-left: 4px solid #27ae60;
            border-radius: 16px;
            padding: 20px 24px;
            margin-bottom: 40px;
            backdrop-filter: blur(10px);
            box-shadow: var(--shadow-light);
        }

        .success-message .icon {
            font-size: 1.5rem;
            margin-right: 12px;
            color: #27ae60;
        }

        .success-message .text {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--dark-green);
            margin: 0;
        }
    </style>

    <div class="treated-page">
        <div class="container">
            <!-- Enhanced Hero Section -->
            <div class="hero-section text-center">
                <div class="content">
                    <h1 class="hero-title">
                        <span>üíâ</span>
                        <span>Treated Animals</span>
                    </h1>
                    <div class="highlight-box">
                        Rescued, healed, and full of hope ‚Äî these animals are living proof of compassion in action.
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <% if (treatedAnimals.length===0) { %>
                <div class="empty-state">
                    <div class="empty-state-icon">üè•</div>
                    <h3 class="empty-state-title">No Treated Animals Yet</h3>
                    <p class="empty-state-text">Animals that have been treated and recovered will appear here. Every
                        healing journey starts with compassion!</p>
                </div>
                <% } else { %>
                    <div class="success-message d-flex align-items-center">
                        <span class="icon">üåü</span>
                        <p class="text">Amazing work! <%= treatedAnimals.length %> animals have been successfully
                                treated and are on their path to recovery.</p>
                    </div>

                    <div class="row g-4">
                        <% treatedAnimals.forEach(animal=> { %>
                            <div class="col-sm-6 col-md-4">
                                <div class="card treated-card h-100 position-relative">
                                    <% if (animal.adoptable) { %>
                                        <div class="ribbon adoptable">üè† Adoptable</div>
                                        <% } else { %>
                                            <div class="ribbon not-adoptable">üè• Recovering</div>
                                            <% } %>

                                                <img src="<%= animal.afterPhotoUrl %>" class="card-img-top"
                                                    alt="Treated Animal">

                                                <div class="card-body">
                                                    <h5 class="card-title">
                                                        <span>üêæ</span>
                                                        <span>Treated Animal</span>
                                                    </h5>

                                                    <p class="card-text">
                                                        <strong>Health Notes:</strong>
                                                        <%= animal.healthNotes || "Fully recovered and healthy!" %>
                                                    </p>

                                                    <% if (animal.adoptable) { %>
                                                        <p class="card-text">
                                                            <strong>Adoption Fee:</strong>
                                                            <span style="color: var(--warm-yellow); font-weight: 700;">‚Çπ
                                                                <%= animal.adoptionFee || 0 %></span>
                                                        </p>
                                                        <% } %>
                                                </div>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                    <% } %>
        </div>
    </div>

    <%- include("../partials/footer") %>