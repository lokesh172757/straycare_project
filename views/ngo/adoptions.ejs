<%- include("../partials/header") %>

    <style>
        :root {
            --primary-green: #2a9d8f;
            --dark-green: #1b4332;
            --light-green: #e6f5e9;
            --warm-yellow: #f4a261;
            --soft-orange: #e76f51;
            --cream: #fffbe7;
            --shadow-light: 0 4px 20px rgba(0, 0, 0, 0.08);
            --shadow-medium: 0 8px 40px rgba(0, 0, 0, 0.12);
            --shadow-heavy: 0 20px 60px rgba(0, 0, 0, 0.15);
            --gradient-primary: linear-gradient(135deg, var(--primary-green), #52b788);
            --gradient-hero: linear-gradient(135deg, rgba(26, 67, 50, 0.9), rgba(42, 157, 143, 0.8));
            --gradient-background: linear-gradient(135deg, #e6f5e9 0%, #fffbe7 50%, #f0f9f5 100%);
            --gradient-adoption: linear-gradient(135deg, var(--warm-yellow), var(--soft-orange));
        }

        * {
            box-sizing: border-box;
        }

        body {
            background: var(--gradient-background);
            background-attachment: fixed;
            font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
            line-height: 1.6;
            color: #2c3e50;
            overflow-x: hidden;
        }

        /* Enhanced Page Header */
        .page-header {
            text-align: center;
            margin-bottom: 3rem;
            padding: 2rem 0;
        }

        .page-title {
            font-weight: 800;
            font-size: clamp(2.2rem, 4vw, 3rem);
            margin-bottom: 1rem;
            background: var(--gradient-adoption);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            position: relative;
            display: inline-block;
        }

        .page-title::after {
            content: "";
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 120px;
            height: 4px;
            background: var(--gradient-adoption);
            border-radius: 2px;
            animation: expand 0.8s ease-out;
        }

        .page-subtitle {
            color: #6b7280;
            font-size: 1.2rem;
            font-weight: 400;
            max-width: 600px;
            margin: 0 auto;
        }

        /* Enhanced Empty State */
        .empty-state-alert {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(244, 162, 97, 0.2);
            border-radius: 20px;
            padding: 3rem 2rem;
            text-align: center;
            box-shadow: var(--shadow-light);
            position: relative;
            overflow: hidden;
        }

        .empty-state-alert::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--gradient-adoption);
            border-radius: 20px 20px 0 0;
        }

        .empty-state-alert::after {
            content: "üè†";
            display: block;
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.6;
        }

        .empty-state-text {
            color: #6b7280;
            font-size: 1.3rem;
            font-weight: 500;
            margin: 0;
        }

        /* Enhanced Card Container */
        .enhanced-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 24px;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            box-shadow: var(--shadow-medium);
            position: relative;
        }

        .enhanced-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
            background: var(--gradient-adoption);
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .enhanced-card:hover {
            transform: translateY(-10px);
            box-shadow: var(--shadow-heavy);
        }

        .enhanced-card:hover::before {
            transform: scaleX(1);
        }

        /* Enhanced Card Header */
        .card-header-enhanced {
            background: var(--gradient-adoption);
            color: white;
            padding: 1.5rem 2rem;
            border: none;
            position: relative;
            overflow: hidden;
        }

        .card-header-enhanced::before {
            content: "";
            position: absolute;
            top: -50%;
            right: -50%;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
            animation: shimmer 3s ease-in-out infinite;
        }

        .card-title-enhanced {
            font-weight: 700;
            font-size: 1.4rem;
            margin: 0;
            position: relative;
            z-index: 1;
        }

        /* Enhanced Table */
        .table-enhanced {
            background: transparent;
            border: none;
            margin: 0;
        }

        .table-enhanced thead th {
            background: rgba(42, 157, 143, 0.1);
            color: var(--dark-green);
            font-weight: 600;
            border: none;
            padding: 1.2rem 1rem;
            font-size: 0.95rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .table-enhanced tbody td {
            padding: 1.5rem 1rem;
            border: none;
            border-bottom: 1px solid rgba(42, 157, 143, 0.1);
            vertical-align: middle;
            background: transparent;
        }

        .table-enhanced tbody tr {
            transition: all 0.3s ease;
        }

        .table-enhanced tbody tr:hover {
            background: rgba(244, 162, 97, 0.05);
            transform: translateX(4px);
        }

        .table-enhanced tbody tr:last-child td {
            border-bottom: none;
        }

        /* Enhanced Animal Image */
        .animal-thumbnail {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 16px;
            border: 3px solid var(--light-green);
            box-shadow: var(--shadow-light);
            transition: all 0.3s ease;
        }

        .animal-thumbnail:hover {
            transform: scale(1.1);
            box-shadow: var(--shadow-medium);
            border-color: var(--primary-green);
        }

        /* Adoption Fee Badge */
        .adoption-fee {
            display: inline-block;
            background: var(--gradient-primary);
            color: white;
            padding: 0.4rem 0.8rem;
            border-radius: 12px;
            font-size: 0.85rem;
            font-weight: 600;
            margin-top: 0.5rem;
            box-shadow: 0 2px 8px rgba(42, 157, 143, 0.3);
        }

        /* Enhanced Text Styling */
        .adopter-name {
            font-weight: 600;
            color: var(--dark-green);
            font-size: 1.05rem;
        }

        .phone-number {
            color: #4b5563;
            font-weight: 500;
            font-family: 'Monaco', 'Consolas', monospace;
        }

        .adoption-message {
            color: #6b7280;
            font-style: italic;
            max-width: 200px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .submission-date {
            color: #8b9db7;
            font-size: 0.9rem;
            font-weight: 500;
        }

        /* Enhanced Delete Button */
        .btn-delete-enhanced {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            border: none;
            color: white;
            padding: 0.75rem 1.25rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 0.9rem;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
            position: relative;
            overflow: hidden;
        }

        .btn-delete-enhanced::before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .btn-delete-enhanced:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(239, 68, 68, 0.4);
            color: white;
            text-decoration: none;
        }

        .btn-delete-enhanced:hover::before {
            left: 100%;
        }

        /* Deleted Animal State */
        .deleted-animal {
            color: #ef4444;
            font-weight: 600;
            font-style: italic;
            padding: 1rem;
            background: rgba(239, 68, 68, 0.1);
            border-radius: 12px;
            border: 1px solid rgba(239, 68, 68, 0.2);
        }

        .deleted-animal::before {
            content: "‚ùå";
            margin-right: 0.5rem;
        }

        /* Responsive Table */
        .table-responsive {
            border-radius: 0 0 24px 24px;
            overflow: hidden;
        }

        /* Animations */
        @keyframes expand {
            from {
                width: 0;
            }

            to {
                width: 120px;
            }
        }

        @keyframes shimmer {

            0%,
            100% {
                transform: translate(-50%, -50%) rotate(0deg);
                opacity: 0.3;
            }

            50% {
                transform: translate(-30%, -30%) rotate(180deg);
                opacity: 0.6;
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Animation Application */
        .enhanced-card {
            animation: fadeInUp 0.8s ease-out;
        }

        .empty-state-alert {
            animation: fadeInUp 0.6s ease-out;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .page-header {
                padding: 1rem 0;
                margin-bottom: 2rem;
            }

            .page-title {
                font-size: 2.2rem;
            }

            .page-subtitle {
                font-size: 1.1rem;
            }

            .table-enhanced thead th {
                padding: 1rem 0.75rem;
                font-size: 0.85rem;
            }

            .table-enhanced tbody td {
                padding: 1rem 0.75rem;
            }

            .animal-thumbnail {
                width: 80px;
                height: 80px;
            }

            .adoption-message {
                max-width: 150px;
            }

            .btn-delete-enhanced {
                padding: 0.5rem 1rem;
                font-size: 0.8rem;
            }
        }

        @media (max-width: 576px) {
            .enhanced-card {
                margin: 0 -15px;
                border-radius: 0;
            }

            .card-header-enhanced {
                padding: 1rem;
            }

            .page-title::after {
                width: 80px;
            }
        }

        /* Container Enhancement */
        .container {
            max-width: 1200px;
            padding: 2rem 1rem;
        }
    </style>

    <div class="container mt-4">
        <!-- Enhanced Page Header -->
        <div class="page-header">
            <h2 class="page-title">üì¨ Adoption Requests</h2>
            <p class="page-subtitle">Manage and review all incoming adoption interest submissions to help animals find
                loving homes.</p>
        </div>

        <% if (requests.length===0) { %>
            <!-- Enhanced Empty State -->
            <div class="empty-state-alert">
                <p class="empty-state-text">No adoption requests yet. When people express interest in adopting animals,
                    their requests will appear here! üêæ</p>
            </div>
            <% } else { %>
                <!-- Enhanced Requests Table -->
                <div class="enhanced-card">
                    <div class="card-header-enhanced">
                        <h4 class="card-title-enhanced">üè† Adoption Interest Submissions</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-enhanced">
                            <thead>
                                <tr>
                                    <th>üêæ Animal</th>
                                    <th>üë§ Adopter Name</th>
                                    <th>üì± Phone</th>
                                    <th>üíå Message</th>
                                    <th>üìÖ Submitted At</th>
                                    <th>‚öôÔ∏è Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% requests.forEach(r=> { %>
                                    <tr>
                                        <td class="text-center">
                                            <% if (r.animalId) { %>
                                                <img src="<%= r.animalId.afterPhotoUrl %>" 
                                                onerror="this.onerror=null; this.src='/images/<%= animal.fallbackImage %
                                                alt="Animal for adoption"
                                                    class="animal-thumbnail">
                                                <div class="adoption-fee">‚Çπ<%= r.animalId.adoptionFee %>
                                                </div>
                                                <% } else { %>
                                                    <div class="deleted-animal">Animal no longer available</div>
                                                    <% } %>
                                        </td>
                                        <td>
                                            <div class="adopter-name">
                                                <%= r.name %>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="phone-number">
                                                <%= r.phone %>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="adoption-message" title="<%= r.message %>">
                                                <%= r.message %>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="submission-date">
                                                <%= r.createdAt.toLocaleString("en-IN") %>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <form action="/ngo/adoptions/<%= r._id %>?_method=DELETE" method="POST"
                                                onsubmit="return confirm('Are you sure you want to delete this adoption request?');">
                                                <button type="submit" class="btn-delete-enhanced">
                                                    <span>üóëÔ∏è Delete</span>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <% } %>
    </div>

    <%- include("../partials/footer") %>