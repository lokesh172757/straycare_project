<%- include("partials/header") %>

    <style>
        :root {
            --primary-green: #2a9d8f;
            --dark-green: #1b4332;
            --light-green: #e6f5e9;
            --warm-yellow: #f4a261;
            --soft-orange: #e76f51;
            --cream: #fffbe7;
            --shadow-light: 0 4px 20px rgba(0, 0, 0, 0.08);
            --shadow-medium: 0 8px 40px rgba(0, 0, 0, 0.12);
            --shadow-heavy: 0 20px 60px rgba(0, 0, 0, 0.15);
            --gradient-primary: linear-gradient(135deg, var(--primary-green), #52b788);
            --gradient-hero: linear-gradient(135deg, rgba(26, 67, 50, 0.9), rgba(42, 157, 143, 0.8));
            --gradient-background: linear-gradient(135deg, #e6f5e9 0%, #fffbe7 50%, #f0f9f5 100%);
        }

        * {
            box-sizing: border-box;
        }

        body {
            background: var(--gradient-background);
            background-attachment: fixed;
            font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
            line-height: 1.6;
            color: #2c3e50;
            overflow-x: hidden;
        }

        /* Enhanced Hero Section */
        .hero-section {
            background: url("https://images.unsplash.com/photo-1583337130417-3346a1f6a5f4?ixlib=rb-4.0.3&auto=format&fit=crop&w=1470&q=80") center/cover no-repeat;
            padding: 140px 20px;
            color: white;
            border-radius: 24px;
            margin-bottom: 80px;
            position: relative;
            overflow: hidden;
            box-shadow: var(--shadow-heavy);
        }

        .hero-section::before {
            content: "";
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, transparent 20%, rgba(42, 157, 143, 0.1) 21%, rgba(42, 157, 143, 0.1) 34%, transparent 35%, transparent);
            animation: float 8s ease-in-out infinite;
            z-index: 0;
        }

        .hero-section::after {
            content: "";
            position: absolute;
            inset: 0;
            background: var(--gradient-hero);
            border-radius: 24px;
            z-index: 1;
        }

        .hero-section .content {
            position: relative;
            z-index: 2;
            max-width: 600px;
            margin: 0 auto;
        }

        .hero-title {
            font-size: clamp(2.5rem, 5vw, 4rem);
            font-weight: 800;
            margin-bottom: 24px;
            background: linear-gradient(45deg, #ffffff, #f0f9f5);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: glow 2s ease-in-out infinite alternate;
            text-shadow: 0 4px 20px rgba(255, 255, 255, 0.3);
        }

        .hero-subtitle {
            font-size: 1.4rem;
            font-weight: 300;
            opacity: 0.95;
            margin-bottom: 0;
            animation: fadeInUp 1s ease-out 0.3s both;
        }

        /* Section Headings */
        .section-heading {
            font-weight: 800;
            font-size: clamp(2rem, 4vw, 2.8rem);
            margin-bottom: 50px;
            position: relative;
            display: inline-block;
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .section-heading::after {
            content: "";
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: var(--gradient-primary);
            border-radius: 2px;
            animation: expand 0.8s ease-out;
        }

        /* Enhanced Cards */
        .enhanced-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            box-shadow: var(--shadow-light);
            position: relative;
        }

        .enhanced-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--gradient-primary);
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .enhanced-card:hover {
            transform: translateY(-12px) scale(1.02);
            box-shadow: var(--shadow-heavy);
        }

        .enhanced-card:hover::before {
            transform: scaleX(1);
        }

        .card-image {
            height: 220px;
            object-fit: cover;
            transition: transform 0.4s ease;
        }

        .enhanced-card:hover .card-image {
            transform: scale(1.1);
        }

        .card-content {
            padding: 24px;
        }

        .card-title-enhanced {
            font-weight: 700;
            color: var(--dark-green);
            font-size: 1.3rem;
            margin-bottom: 12px;
            position: relative;
        }

        .adoptable-badge {
            display: inline-block;
            background: linear-gradient(45deg, var(--warm-yellow), var(--soft-orange));
            color: white;
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            margin-bottom: 12px;
            animation: pulse 2s infinite;
            box-shadow: 0 4px 15px rgba(244, 162, 97, 0.4);
        }

        .treated-badge {
            display: inline-block;
            background: var(--gradient-primary);
            color: white;
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            margin-bottom: 12px;
        }

        .card-text-enhanced {
            font-size: 0.95rem;
            color: #666;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        /* Enhanced Buttons */
        .btn-enhanced {
            background: var(--gradient-primary);
            border: none;
            color: white;
            padding: 12px 24px;
            border-radius: 25px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(42, 157, 143, 0.3);
            position: relative;
            overflow: hidden;
        }

        .btn-enhanced::before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .btn-enhanced:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(42, 157, 143, 0.4);
            color: white;
            text-decoration: none;
        }

        .btn-enhanced:hover::before {
            left: 100%;
        }

        /* Ad Cards */
        .ad-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 16px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: var(--shadow-light);
            position: relative;
        }

        .ad-card:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-medium);
        }

        .ad-image {
            height: 180px;
            object-fit: contain;
            background: linear-gradient(135deg, #f8f9fa, #ffffff);
            padding: 20px;
            transition: transform 0.3s ease;
        }

        .ad-card:hover .ad-image {
            transform: scale(1.05);
        }

        .ad-title {
            font-weight: 600;
            color: var(--dark-green);
            font-size: 1.1rem;
            padding: 20px;
            margin: 0;
        }

        /* Animations */
        @keyframes float {

            0%,
            100% {
                transform: translate(0px, 0px) rotate(0deg);
            }

            33% {
                transform: translate(30px, -30px) rotate(120deg);
            }

            66% {
                transform: translate(-20px, 20px) rotate(240deg);
            }
        }

        @keyframes glow {
            from {
                text-shadow: 0 4px 20px rgba(255, 255, 255, 0.3);
            }

            to {
                text-shadow: 0 4px 30px rgba(255, 255, 255, 0.6), 0 0 40px rgba(42, 157, 143, 0.3);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes expand {
            from {
                width: 0;
            }

            to {
                width: 80px;
            }
        }

        @keyframes pulse {

            0%,
            100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .hero-section {
                padding: 100px 20px;
                margin-bottom: 60px;
            }

            .section-heading {
                font-size: 2rem;
                margin-bottom: 40px;
            }

            .card-content {
                padding: 20px;
            }
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #8b9db7;
            font-size: 1.1rem;
        }

        .empty-state::before {
            content: "🐾";
            display: block;
            font-size: 3rem;
            margin-bottom: 16px;
            opacity: 0.5;
        }

        /* Section Divider */
        .section-divider {
            height: 2px;
            background: linear-gradient(90deg, transparent, var(--primary-green), transparent);
            margin: 80px 0;
            border: none;
        }

        /* Container Enhancements */
        .container {
            max-width: 1200px;
            padding: 0 20px;
        }

        .row {
            --bs-gutter-x: 2rem;
            --bs-gutter-y: 2rem;
        }
    </style>

    <div class="container">
        <!-- Enhanced Welcome Hero Banner -->
        <div class="hero-section text-center">
            <div class="content">
                <h1 class="hero-title">Welcome to StrayCare 🐾</h1>
                <p class="hero-subtitle">Giving hope, health, and homes to street animals through compassionate care and
                    community support.</p>
            </div>
        </div>

        <!-- Enhanced Treated Animals Section -->
        <div class="text-center">
            <h2 class="section-heading">Recently Treated Animals</h2>
        </div>

        <% if (animals.length===0) { %>
            <div class="empty-state">
                No treated animals to display yet. Check back soon for updates!
            </div>
            <% } else { %>
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
                    <% animals.forEach(function(animal) { %>
                        <div class="col">
                            <div class="enhanced-card h-100">
                                <img src="<%= animal.afterPhotoUrl %>" class="card-image w-100" alt="Treated Animal">
                                <div class="card-content">
                                    <% if (animal.adoptable) { %>
                                        <span class="adoptable-badge">🏠 Available for Adoption!</span>
                                        <% } else { %>
                                            <span class="treated-badge">✨ Treated & Healthy</span>
                                            <% } %>
                                                <h5 class="card-title-enhanced">
                                                    <%= animal.adoptable ? "Looking for a Forever Home"
                                                        : "Successfully Treated" %>
                                                </h5>
                                                <p class="card-text-enhanced">
                                                    <%= animal.healthNotes %>
                                                </p>
                                                <% if (animal.adoptable) { %>
                                                    <a href="/adoption" class="btn-enhanced">
                                                        <span>💕 View for Adoption</span>
                                                    </a>
                                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <% } %>

                    <!-- Enhanced Section Divider -->
                    <hr class="section-divider">

                    <!-- Enhanced Ads Section -->
                    <div class="text-center">
                        <h2 class="section-heading" style="color: var(--warm-yellow);">Sponsored Pet Shops 🛍️</h2>
                    </div>

                    <% if (ads.length===0) { %>
                        <div class="empty-state">
                            No sponsored shops to show right now. We're working on bringing you the best pet care
                            partners!
                        </div>
                        <% } else { %>
                            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
                                <% ads.forEach(function(ad) { %>
                                    <div class="col">
                                        <a href="<%= ad.link %>" target="_blank" class="text-decoration-none">
                                            <div class="ad-card h-100">
                                                <img src="<%= ad.logoUrl %>" class="ad-image w-100"
                                                    alt="<%= ad.shopName %> Logo">
                                                <h5 class="ad-title text-center">
                                                    <%= ad.shopName %>
                                                </h5>
                                            </div>
                                        </a>
                                    </div>
                                    <% }); %>
                            </div>
                            <% } %>
    </div>

    <%- include("partials/footer") %>