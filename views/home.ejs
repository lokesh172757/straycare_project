<%- include("partials/header") %>

    <div class="container py-5">

        <!-- Welcome Message -->
        <h1 class="text-center mb-5 display-5 fw-bold text-primary">Welcome to StrayCare üêæ</h1>

        <!-- Treated Animals Section -->
        <h2 class="mb-4 text-center text-success">Recently Treated Animals</h2>

        <% if (animals.length===0) { %>
            <p class="text-center text-muted">No treated animals to display yet.</p>
            <% } else { %>
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    <% animals.forEach(function(animal) { %>
                        <div class="col">
                            <div class="card h-100 shadow-sm border-success">
                                <img src="<%= animal.afterPhotoUrl %>" class="card-img-top" alt="Treated Animal"
                                    style="height: 200px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title text-center">
                                        <%= animal.adoptable ? "Adopt Me!" : "Treated & Healthy" %>
                                    </h5>
                                    <p class="card-text text-muted">
                                        <%= animal.healthNotes %>
                                    </p>
                                </div>
                                <% if (animal.adoptable) { %>
                                    <div class="card-footer text-center">
                                        <a href="/adoption" class="btn btn-outline-primary">View for Adoption</a>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <% } %>

                    <!-- Ads Section -->
                    <hr class="my-5">

                    <h2 class="text-center mb-4 text-warning">Sponsored Pet Shops üõçÔ∏è</h2>

                    <% if (ads.length===0) { %>
                        <p class="text-center text-muted">No ads to show right now.</p>
                        <% } else { %>
                            <div class="row row-cols-1 row-cols-md-3 g-4">
                                <% ads.forEach(function(ad) { %>
                                    <div class="col">
                                        <div class="card h-100 shadow-sm border-0">
                                            <a href="<%= ad.link %>" target="_blank">
                                                <img src="<%= ad.logoUrl %>" class="card-img-top"
                                                    alt="<%= ad.shopName %> Logo"
                                                    style="height: 200px; object-fit: cover;">
                                            </a>
                                            <div class="card-body text-center">
                                                <h5 class="card-title">
                                                    <%= ad.shopName %>
                                                </h5>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                            </div>
                            <% } %>

    </div>

    <%- include("partials/footer") %>