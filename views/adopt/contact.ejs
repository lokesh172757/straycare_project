<%- include("../partials/header") %>

    <style>
        body {
            background: linear-gradient(to bottom right, #f0f9ff, #e0f7fa);
        }

        .form-container {
            background-color: white;
            padding: 30px;
            border-radius: 16px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .form-container:hover {
            transform: translateY(-3px);
        }

        .form-label {
            font-weight: 600;
        }

        .btn-success {
            background-color: #28a745;
            border: none;
        }

        .btn-success:hover {
            background-color: #218838;
        }

        h2 {
            font-family: 'Segoe UI', sans-serif;
            letter-spacing: 1px;
        }

        .animal-image {
            max-height: 300px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
    </style>

    <div class="container py-5">

        <!-- Page Heading -->
        <h2 class="text-center text-success mb-4 fw-bold">Interested in Adopting? üêæ</h2>

        <!-- Animal Preview -->
        <div class="text-center mb-4">
            <img src="<%= animal.afterPhotoUrl %>" class="img-fluid animal-image" alt="Animal">
        </div>

        <div class="mb-4 text-center">
            <p><strong class="text-primary">Health Notes:</strong>
                <%= animal.healthNotes %>
            </p>
            <p><strong class="text-primary">Adoption Fee:</strong> ‚Çπ<%= animal.adoptionFee %>
            </p>
        </div>

        <!-- Adoption Interest Form -->
        <div class="form-container mx-auto" style="max-width: 600px;">
            <form action="/adopt/<%= animal._id %>/contact" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Your Name</label>
                    <input name="name" id="name" class="form-control" placeholder="Enter your full name" required />
                </div>

                <div class="mb-3">
                    <label for="phone" class="form-label">Phone Number</label>
                    <input name="phone" id="phone" class="form-control" placeholder="Enter your contact number"
                        required />
                </div>

                <div class="mb-3">
                    <label for="message" class="form-label">Message (Optional)</label>
                    <textarea name="message" id="message" class="form-control"
                        placeholder="Why do you want to adopt?"></textarea>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4 py-2 shadow-sm">Submit Interest</button>
                </div>

            </form>
        </div>
    </div>

    <%- include("../partials/footer") %>