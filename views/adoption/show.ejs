<%- include("../partials/header") %>

    <div class="container py-5">

        <!-- Title -->
        <h2 class="mb-4 text-center text-primary fw-bold">Adopt Me! üêæ</h2>

        <!-- Animal Image -->
        <div class="text-center mb-4">
            <img src="<%= animal.afterPhotoUrl %>" class="img-fluid rounded shadow" style="max-height: 300px;"
                alt="Animal Image">
        </div>

        <!-- Health & Fee Info -->
        <div class="mb-4">
            <p><strong class="text-success">Health Notes:</strong>
                <%= animal.healthNotes %>
            </p>
            <p><strong class="text-success">Adoption Fee:</strong> ‚Çπ<%= animal.adoptionFee %>
            </p>
        </div>

        <!-- Rescue Info -->
        <hr>
        <h4 class="text-secondary fw-semibold mb-3">Rescue Report Info</h4>
        <p><strong class="text-muted">Found at:</strong>
            [<%= animal.beforeReportId.location.coordinates[1] %>,
                <%= animal.beforeReportId.location.coordinates[0] %>]
        </p>
        <p class="text-muted">
            <%= animal.beforeReportId.description %>
        </p>

        <!-- Contact/Adopt Button -->
        <div class="text-center mt-4">
            <a href="/adopt/<%= animal._id %>/contact" class="btn btn-lg btn-success shadow-sm">I'm Interested üíö</a>
        </div>

    </div>

    <%- include("../partials/footer") %>