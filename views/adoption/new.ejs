<%- include("../partials/header") %>

    <style>
        body {
            background: linear-gradient(to right, #f0fff0, #e0ffe0);
        }

        .form-container {
            background: #ffffff;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .form-container:hover {
            transform: scale(1.01);
        }

        .form-label {
            color: #2e7d32;
            font-weight: 600;
        }

        .form-select,
        .form-control {
            border-radius: 12px;
            box-shadow: none;
            border: 1px solid #c8e6c9;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        .form-select:focus,
        .form-control:focus {
            border-color: #66bb6a;
            box-shadow: 0 0 5px rgba(102, 187, 106, 0.5);
        }

        .btn-success {
            border-radius: 25px;
            font-weight: 500;
            padding-left: 30px;
            padding-right: 30px;
        }

        .title {
            background: linear-gradient(to right, #4caf50, #81c784);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
    </style>

    <div class="container py-5">
        <!-- Title -->
        <h2 class="text-center mb-5 fw-bold title">Mark Treated Animal as Adoptable üê∂</h2>

        <!-- Form Container -->
        <div class="form-container mx-auto" style="max-width: 600px;">
            <form action="/adoption" method="POST" class="row g-4">

                <!-- Animal Selection -->
                <div class="col-12">
                    <label for="animalId" class="form-label">Select Treated Animal</label>
                    <select name="animalId" id="animalId" class="form-select" required>
                        <% untreated.forEach(animal=> { %>
                            <option value="<%= animal._id %>">
                                <%= animal.healthNotes.substring(0, 50) %>...
                            </option>
                            <% }) %>
                    </select>
                </div>

                <!-- Fee Input -->
                <div class="col-12">
                    <label for="adoptionFee" class="form-label">Adoption Fee (‚Çπ)</label>
                    <input type="number" name="adoptionFee" id="adoptionFee" class="form-control" value="0" min="0"
                        required>
                </div>

                <!-- Submit Button -->
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-success shadow-sm">Mark as Adoptable</button>
                </div>

            </form>
        </div>
    </div>

    <%- include("../partials/footer") %>