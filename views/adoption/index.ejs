<%- include("../partials/header") %>

    <div class="container mt-4">
        <h2 class="mb-4">Animals Available for Adoption</h2>

        <div class="row">
            <% animals.forEach(animal=> { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="<%= animal.afterPhotoUrl %>" class="card-img-top"
                            style="height: 250px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">Fee: â‚¹<%= animal.adoptionFee %>
                            </h5>
                            <p class="card-text">
                                <%= animal.healthNotes.substring(0, 100) %>...
                            </p>
                            <!-- ðŸ”— Link to detailed view -->
                            <a href="/adoption/<%= animal._id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <%- include("../partials/footer") %>